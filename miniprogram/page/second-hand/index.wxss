.container {
  padding: 20px;
  background-color: #F5F7FA;
  min-height: 100vh;
}

.second-hand-section {
  max-width: 600px;
  margin: 0 auto;
}

.section-title {
  font-size: 20px;
  font-weight: 600;
  color: #333;
  margin-bottom: 20px;
}

/* 加载和空状态 */
.loading-container,
.empty-container {
  text-align: center;
  padding: 40px 20px;
}

.loading-text,
.empty-text {
  color: #999;
  font-size: 14px;
}

/* 错误状态 */
.error-container {
  text-align: center;
  padding: 60px 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20px;
}

.error-text {
  color: #ff3b30;
  font-size: 16px;
}

.retry-btn {
  margin-top: 10px;
  padding: 12px 32px;
  background-color: #07c160;
  color: #fff;
  border-radius: 8px;
  font-size: 16px;
  border: none;
}

.retry-btn::after {
  border: none;
}

/* 商品列表 */
.items-list {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.item-card {
  background-color: #fff;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: row;
  transition: transform 0.2s;
}

.item-card:active {
  transform: scale(0.98);
}

.item-image {
  width: 120px;
  height: 120px;
  flex-shrink: 0;
}

.item-content {
  flex: 1;
  padding: 16px;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 12px;
}

.item-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.item-price {
  font-size: 18px;
  font-weight: 600;
  color: #07c160;
  white-space: nowrap;
}

.item-category {
  font-size: 12px;
  color: #999;
  padding: 4px 8px;
  background-color: #f0f0f0;
  border-radius: 4px;
  display: inline-block;
  width: fit-content;
}

.item-description {
  font-size: 14px;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.item-footer {
  margin-top: auto;
  padding-top: 8px;
}

.item-contact {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 8px;
  background-color: #f8f8f8;
  border-radius: 8px;
}

.contact-icon {
  font-size: 16px;
}

.contact-text {
  font-size: 14px;
  color: #07c160;
  flex: 1;
}

[data-weui-theme=dark] .container {
  background-color: #1F1F1F;
}

[data-weui-theme=dark] .section-title {
  color: #fff;
}

[data-weui-theme=dark] .item-card {
  background-color: #2C2C2C;
}

[data-weui-theme=dark] .item-title {
  color: #fff;
}

[data-weui-theme=dark] .item-description {
  color: #ccc;
}

[data-weui-theme=dark] .item-contact {
  background-color: #1F1F1F;
}

[data-weui-theme=dark] .item-category {
  background-color: #1F1F1F;
  color: #999;
}

[data-weui-theme=dark] .error-text {
  color: #ff6b6b;
}

