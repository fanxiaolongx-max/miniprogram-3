.container {
  padding: 20px;
  background-color: #F5F7FA;
  min-height: 100vh;
}

.blacklist-section {
  max-width: 600px;
  margin: 0 auto;
}

.section-header {
  margin-bottom: 20px;
}

.section-title {
  font-size: 20px;
  font-weight: 600;
  color: #333;
  margin-bottom: 8px;
}

.section-subtitle {
  font-size: 14px;
  color: #999;
}

/* 加载和空状态 */
.loading-container,
.empty-container {
  text-align: center;
  padding: 40px 20px;
}

.loading-text,
.empty-text {
  color: #999;
  font-size: 14px;
}

/* 错误状态 */
.error-container {
  text-align: center;
  padding: 60px 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20px;
}

.error-text {
  color: #ff3b30;
  font-size: 16px;
}

.retry-btn {
  margin-top: 10px;
  padding: 12px 32px;
  background-color: #07c160;
  color: #fff;
  border-radius: 8px;
  font-size: 16px;
  border: none;
}

.retry-btn::after {
  border: none;
}

/* 通栏列表布局 */
.items-list {
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.list-item {
  display: flex;
  align-items: center;
  padding: 16px 20px;
  border-bottom: 1px solid #f0f0f0;
  transition: background-color 0.2s;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background-color: #f8f8f8;
}

.list-item-left {
  margin-right: 12px;
  flex-shrink: 0;
}

.warning-badge {
  background: #ff3b30;
  color: #fff;
  font-size: 12px;
  font-weight: 600;
  padding: 4px 10px;
  border-radius: 4px;
  white-space: nowrap;
}

.list-item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6px;
  min-width: 0;
}

.list-item-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list-item-type {
  font-size: 12px;
  color: #999;
}

.list-item-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4px;
  margin-left: 12px;
  flex-shrink: 0;
}

.list-item-date {
  font-size: 12px;
  color: #999;
  white-space: nowrap;
}

.list-item-arrow {
  font-size: 16px;
  color: #ccc;
}

[data-weui-theme=dark] .container {
  background-color: #1F1F1F;
}

[data-weui-theme=dark] .section-title {
  color: #fff;
}

[data-weui-theme=dark] .items-list {
  background: #2C2C2C;
}

[data-weui-theme=dark] .list-item {
  border-bottom-color: #3C3C3C;
}

[data-weui-theme=dark] .list-item:active {
  background-color: #1F1F1F;
}

[data-weui-theme=dark] .list-item-title {
  color: #fff;
}

[data-weui-theme=dark] .error-text {
  color: #ff6b6b;
}

