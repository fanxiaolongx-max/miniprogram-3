.container {
  padding: 20px;
  background-color: #F5F7FA;
  min-height: 100vh;
}

.translation-section {
  max-width: 600px;
  margin: 0 auto;
}

/* 分类筛选 */
.category-filter {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin-bottom: 20px;
}

.category-item {
  padding: 8px 16px;
  background-color: #fff;
  border-radius: 20px;
  font-size: 14px;
  color: #333;
  border: 1px solid #e0e0e0;
  transition: all 0.3s;
}

.category-item.active {
  background-color: #07c160;
  color: #fff;
  border-color: #07c160;
}

/* 加载和空状态 */
.loading-container,
.empty-container {
  text-align: center;
  padding: 40px 20px;
}

.loading-text,
.empty-text {
  color: #999;
  font-size: 14px;
}

/* 错误状态 */
.error-container {
  text-align: center;
  padding: 60px 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20px;
}

.error-text {
  color: #ff3b30;
  font-size: 16px;
}

.retry-btn {
  margin-top: 10px;
  padding: 12px 32px;
  background-color: #07c160;
  color: #fff;
  border-radius: 8px;
  font-size: 16px;
  border: none;
}

.retry-btn::after {
  border: none;
}

/* 翻译卡片列表 */
.phrase-list {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.phrase-card {
  background-color: #fff;
  border-radius: 12px;
  padding: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  transition: transform 0.2s;
}

.phrase-card.hidden {
  display: none;
}

.phrase-card:active {
  transform: scale(0.98);
}

.phrase-category {
  font-size: 12px;
  color: #07c160;
  margin-bottom: 12px;
  font-weight: 500;
}

.phrase-content {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.phrase-item {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.phrase-label {
  font-size: 12px;
  color: #999;
}

.phrase-text {
  font-size: 16px;
  color: #333;
  padding: 12px;
  background-color: #f8f8f8;
  border-radius: 8px;
  min-height: 24px;
  word-break: break-all;
}

.phrase-text.arabic {
  direction: rtl;
  text-align: right;
  font-size: 18px;
  font-family: Arial, sans-serif;
}

.phrase-divider {
  height: 1px;
  background-color: #e0e0e0;
  margin: 4px 0;
}

[data-weui-theme=dark] .container {
  background-color: #1F1F1F;
}

[data-weui-theme=dark] .category-item {
  background-color: #2C2C2C;
  color: #fff;
  border-color: #3C3C3C;
}

[data-weui-theme=dark] .category-item.active {
  background-color: #07c160;
}

[data-weui-theme=dark] .phrase-card {
  background-color: #2C2C2C;
}

[data-weui-theme=dark] .phrase-text {
  background-color: #1F1F1F;
  color: #fff;
}

[data-weui-theme=dark] .phrase-label {
  color: #999;
}

[data-weui-theme=dark] .error-text {
  color: #ff6b6b;
}

