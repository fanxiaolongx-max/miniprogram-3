}

[data-weui-theme=dark] .modal-chinese.playing {
  background: #1a237e;
  border-color: #3f51b5;
}

[data-weui-theme=dark] .modal-arabic {
  background: #1F1F1F;
}

[data-weui-theme=dark] .modal-arabic.playing {
  background: #1a237e;
  border-color: #3f51b5;
}

[data-weui-theme=dark] .text-content {
