.container {
  padding: 20px;
  background-color: #F5F7FA;
  min-height: 100vh;
}

.translation-section {
  max-width: 600px;
  margin: 0 auto;
}

/* 分类筛选 */
.category-filter {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin-bottom: 20px;
}

.category-item {
  padding: 8px 16px;
  background-color: #fff;
  border-radius: 20px;
  font-size: 14px;
  color: #333;
  border: 1px solid #e0e0e0;
  transition: all 0.3s;
}

.category-item.active {
  background-color: #07c160;
  color: #fff;
  border-color: #07c160;
}

/* 加载和空状态 */
.loading-container,
.empty-container {
  text-align: center;
  padding: 40px 20px;
}

.loading-text,
.empty-text {
  color: #999;
  font-size: 14px;
}

/* 错误状态 */
.error-container {
  text-align: center;
  padding: 60px 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20px;
}

.error-text {
  color: #ff3b30;
  font-size: 16px;
}

.retry-btn {
  margin-top: 10px;
  padding: 12px 32px;
  background-color: #07c160;
  color: #fff;
  border-radius: 8px;
  font-size: 16px;
  border: none;
}

.retry-btn::after {
  border: none;
}

/* 大色块矩阵布局 */
.phrase-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
  padding: 0 20px 20px;
}

.phrase-button {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16px;
  padding: 24px 16px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 120px;
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
  transition: transform 0.2s, box-shadow 0.2s;
  position: relative;
  overflow: hidden;
}

.phrase-button.hidden {
  display: none;
}

.phrase-button:active {
  transform: scale(0.95);
  box-shadow: 0 2px 8px rgba(102, 126, 234, 0.2);
}

.phrase-button-text {
  font-size: 18px;
  font-weight: 600;
  color: #fff;
  text-align: center;
  line-height: 1.4;
  margin-bottom: 8px;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
}

.phrase-button-category {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.8);
  background: rgba(255, 255, 255, 0.2);
  padding: 4px 12px;
  border-radius: 12px;
}

/* 全屏弹窗 */
.phrase-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 20px;
}

.modal-content {
  background: #fff;
  border-radius: 20px;
  width: 100%;
  max-width: 500px;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px;
  border-bottom: 1px solid #f0f0f0;
}

.modal-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.modal-close {
  font-size: 24px;
  color: #999;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 40px 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30px;
  flex: 1;
  justify-content: center;
}

.modal-text-container {
  display: flex;
  flex-direction: column;
  gap: 30px;
  width: 100%;
  align-items: center;
}

.modal-chinese {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12px;
  padding: 16px;
  background: #f5f5f5;
  border-radius: 12px;
  width: 100%;
  cursor: pointer;
  transition: background 0.2s;
}

.modal-chinese:active {
  background: #e0e0e0;
}

.modal-chinese.playing {
  background: #e3f2fd;
  border: 2px solid #2196f3;
}

.modal-arabic {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12px;
  padding: 16px;
  background: #f5f5f5;
  border-radius: 12px;
  width: 100%;
  cursor: pointer;
  transition: background 0.2s;
  direction: rtl;
}

.modal-arabic:active {
  background: #e0e0e0;
}

.modal-arabic.playing {
  background: #e3f2fd;
  border: 2px solid #2196f3;
}

.text-content {
  font-size: 24px;
  font-weight: 600;
  color: #333;
  text-align: center;
  flex: 1;
  line-height: 1.4;
  word-break: break-all;
}

.modal-arabic .text-content {
  font-size: 36px;
  font-family: Arial, sans-serif;
}

.speak-icon {
  font-size: 24px;
  opacity: 0.6;
  flex-shrink: 0;
}

.modal-actions {
  display: flex;
  gap: 12px;
  width: 100%;
}

.action-btn {
  flex: 1;
  padding: 12px;
  background: #07c160;
  color: #fff;
  border-radius: 8px;
  font-size: 16px;
  border: none;
}

.action-btn::after {
  border: none;
}

[data-weui-theme=dark] .container {
  background-color: #1F1F1F;
}

[data-weui-theme=dark] .category-item {
  background-color: #2C2C2C;
