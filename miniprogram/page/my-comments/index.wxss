@import "../common/index.wxss";

.page {
  min-height: 100vh;
  background: #f5f5f5;
}

.container {
  padding: 32rpx;
  padding-bottom: env(safe-area-inset-bottom);
}

.loading-container,
.error-container,
.empty-container {
  padding: 160rpx 0;
  text-align: center;
}

.loading-text,
.error-text,
.empty-text {
  font-size: 28rpx;
  color: #999999;
  display: block;
  margin-bottom: 24rpx;
}

.retry-btn {
  margin-top: 24rpx;
  color: #333333;
  border-color: #e0e0e0;
}

.comments-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}


.comment-content-wrapper {
  flex: 1;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  min-width: 0;
}

.comment-card {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s;
}

.comment-actions {
  display: flex;
  align-items: center;
  padding-right: 24rpx;
  flex-shrink: 0;
  z-index: 10;
}

.delete-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: #fff5f5;
  border-radius: 12rpx;
  transition: all 0.2s;
  min-width: 100rpx;
  position: relative;
  z-index: 11;
}

.delete-btn:active {
  background: #ffe5e5;
  transform: scale(0.95);
}

.delete-icon {
  font-size: 28rpx;
  line-height: 1;
}

.delete-text {
  font-size: 24rpx;
  color: #ff3b30;
  font-weight: 500;
}

.comment-post-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.comment-meta-row {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 12rpx;
}

.comment-time {
  font-size: 22rpx;
  color: #999999;
  line-height: 1.5;
}

.comment-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  margin-top: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.load-more-container {
  padding: 40rpx 0;
  text-align: center;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.load-more-btn {
  color: #333333;
  border-color: #e0e0e0;
}

.loading-more {
  padding: 20rpx 0;
}

.loading-more-text {
  font-size: 26rpx;
  color: #999999;
}

.no-more {
  padding: 20rpx 0;
}

.no-more-text {
  font-size: 24rpx;
  color: #cccccc;
}

/* 暗色主题 */
[data-weui-theme=dark] .page {
  background: #000000;
}

[data-weui-theme=dark] .comment-card {
  background: #2c2c2e;
}

[data-weui-theme=dark] .comment-post-title {
  color: #ffffff;
}

[data-weui-theme=dark] .comment-time {
  color: #8e8e93;
}

[data-weui-theme=dark] .comment-text {
  color: #8e8e93;
}

[data-weui-theme=dark] .loading-text,
[data-weui-theme=dark] .error-text,
[data-weui-theme=dark] .empty-text {
  color: #8e8e93;
}

[data-weui-theme=dark] .retry-btn,
[data-weui-theme=dark] .load-more-btn {
  color: #ffffff;
  border-color: #38383a;
}

[data-weui-theme=dark] .loading-more-text {
  color: #8e8e93;
}

[data-weui-theme=dark] .no-more-text {
  color: #666666;
}

[data-weui-theme=dark] .delete-btn {
  background: #3a2a2a;
}

[data-weui-theme=dark] .delete-btn:active {
  background: #4a2a2a;
}

[data-weui-theme=dark] .delete-text {
  color: #ff6b6b;
}

