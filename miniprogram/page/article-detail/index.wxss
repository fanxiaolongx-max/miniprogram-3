.container {
  padding: 20px;
  background-color: #F5F7FA;
  min-height: 100vh;
}

.loading-container,
.error-container {
  text-align: center;
  padding: 60px 20px;
}

.loading-text,
.error-text {
  color: #999;
  font-size: 14px;
}

.error-text {
  color: #ff3b30;
  font-size: 16px;
}

.retry-btn {
  margin-top: 20px;
  padding: 12px 32px;
  background-color: #07c160;
  color: #fff;
  border-radius: 8px;
  font-size: 16px;
  border: none;
}

.retry-btn::after {
  border: none;
}

.article-container {
  background: #fff;
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.article-title {
  font-size: 22px;
  font-weight: 600;
  color: #333;
  line-height: 1.5;
  margin-bottom: 12px;
}

.article-meta {
  font-size: 14px;
  color: #999;
  margin-bottom: 20px;
  padding-bottom: 16px;
  border-bottom: 1px solid #f0f0f0;
}

.article-content {
  font-size: 16px;
  color: #333;
  line-height: 1.8;
  word-wrap: break-word;
  overflow-wrap: break-word;
  margin-bottom: 20px;
}

/* 解析后的内容区域 */
.article-content-parsed {
  font-size: 16px;
  color: #333;
  line-height: 1.8;
  word-wrap: break-word;
  overflow-wrap: break-word;
  margin-bottom: 20px;
}

.article-text-node {
  display: block;
  margin-bottom: 12px;
}

/* 内联图片 */
.article-image-node {
  margin: 16px 0;
  text-align: center;
}

.article-inline-image {
  max-width: 100%;
  width: 100%;
  height: auto;
  border-radius: 8px;
  display: block;
  background-color: #f5f5f5;
}

/* 内联视频 */
.article-video-node {
  margin: 16px 0;
}

.article-inline-video {
  width: 100%;
  height: 200px;
  border-radius: 8px;
  background-color: #000;
}

/* 内联链接 */
.article-link-node {
  margin: 12px 0;
}

.inline-link-item {
  display: flex;
  align-items: center;
  padding: 12px 16px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(102, 126, 234, 0.3);
  transition: all 0.2s;
}

.inline-link-item:active {
  transform: scale(0.98);
  box-shadow: 0 1px 4px rgba(102, 126, 234, 0.4);
}

.inline-link-icon {
  font-size: 18px;
  margin-right: 8px;
  flex-shrink: 0;
}

.inline-link-text {
  flex: 1;
  font-size: 15px;
  font-weight: 500;
  color: #fff;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.inline-link-hint {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.8);
  margin-left: 8px;
  flex-shrink: 0;
}

/* 文章地址地图区域 */
.location-section {
  margin-top: 30px;
  padding-top: 20px;
  border-top: 1px solid #f0f0f0;
}

.location-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  margin-bottom: 12px;
}

.location-info {
  margin-bottom: 12px;
}

.location-name {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  margin-bottom: 4px;
}

.location-address {
  font-size: 14px;
  color: #666;
  line-height: 1.5;
}

.location-map {
  width: 100%;
  height: 300px;
  border-radius: 8px;
  margin-bottom: 8px;
}

.location-tip {
  font-size: 12px;
  color: #999;
  text-align: center;
}

/* 文章图片区域 */
.images-section {
  margin-top: 30px;
  padding-top: 20px;
  border-top: 1px solid #f0f0f0;
}

.images-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  margin-bottom: 16px;
}

.images-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  gap: 8px;
  justify-content: flex-start;
  margin-top: 8px;
}

.article-image-thumbnail {
  width: calc(33.333% - 6px);
  height: 90px;
  border-radius: 6px;
  display: block;
  background-color: #f5f5f5;
  object-fit: cover;
  transition: all 0.2s;
  border: 1px solid #e9ecef;
  box-sizing: border-box;
}

.article-image-thumbnail:active {
  transform: scale(0.95);
  opacity: 0.7;
  border-color: #667eea;
}

/* 文章视频区域 */
.videos-section {
  margin-top: 30px;
  padding-top: 20px;
  border-top: 1px solid #f0f0f0;
}

.videos-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  margin-bottom: 16px;
}

.videos-container {
  display: flex;
  flex-direction: column;
  gap: 16px;
  margin-top: 8px;
}

.article-video {
  width: 100%;
  height: 200px;
  border-radius: 8px;
  background-color: #000;
  border: 1px solid #e9ecef;
  box-sizing: border-box;
}

/* 文章链接区域 */
.links-section {
  margin-top: 30px;
  padding-top: 20px;
  border-top: 1px solid #f0f0f0;
}

.links-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  margin-bottom: 16px;
}

.links-container {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.link-item {
  display: flex;
  align-items: center;
  padding: 12px 16px;
  background-color: #f8f9fa;
  border-radius: 8px;
  border: 1px solid #e9ecef;
  transition: all 0.2s;
}

.link-item:active {
  background-color: #e9ecef;
  transform: scale(0.98);
}

.link-icon {
  font-size: 20px;
  margin-right: 12px;
  flex-shrink: 0;
}

.link-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.link-text {
  font-size: 15px;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.link-url {
  font-size: 12px;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.link-action {
  font-size: 14px;
  color: #07c160;
  font-weight: 500;
  padding: 6px 12px;
  background-color: #fff;
  border-radius: 4px;
  border: 1px solid #07c160;
  flex-shrink: 0;
  margin-left: 12px;
}

/* rich-text 组件中的图片样式 */
/* 注意：rich-text组件对CSS支持有限，主要通过内联样式控制 */
/* 已在JS中为所有图片添加内联样式，使其自适应屏幕宽度 */

[data-weui-theme=dark] .container {
  background-color: #1F1F1F;
}

[data-weui-theme=dark] .article-container {
  background: #2C2C2C;
}

[data-weui-theme=dark] .article-title {
  color: #fff;
}

[data-weui-theme=dark] .article-content {
  color: #fff;
}

[data-weui-theme=dark] .article-meta {
  border-bottom-color: #3C3C3C;
}

[data-weui-theme=dark] .error-text {
  color: #ff6b6b;
}

[data-weui-theme=dark] .location-section {
  border-top-color: #3C3C3C;
}

[data-weui-theme=dark] .location-title {
  color: #fff;
}

[data-weui-theme=dark] .location-name {
  color: #fff;
}

[data-weui-theme=dark] .location-address {
  color: #999;
}

[data-weui-theme=dark] .location-tip {
  color: #666;
}

[data-weui-theme=dark] .images-section {
  border-top-color: #3C3C3C;
}

[data-weui-theme=dark] .images-title {
  color: #fff;
}

[data-weui-theme=dark] .article-image-thumbnail {
  background-color: #3C3C3C;
}

[data-weui-theme=dark] .videos-section {
  border-top-color: #3C3C3C;
}

[data-weui-theme=dark] .videos-title {
  color: #fff;
}

[data-weui-theme=dark] .article-video {
  border-color: #3C3C3C;
}

[data-weui-theme=dark] .article-content-parsed {
  color: #fff;
}

[data-weui-theme=dark] .article-inline-image {
  background-color: #3C3C3C;
}

[data-weui-theme=dark] .article-inline-video {
  border-color: #3C3C3C;
}

[data-weui-theme=dark] .links-section {
  border-top-color: #3C3C3C;
}

[data-weui-theme=dark] .links-title {
  color: #fff;
}

[data-weui-theme=dark] .link-item {
  background-color: #3C3C3C;
  border-color: #4C4C4C;
}

[data-weui-theme=dark] .link-item:active {
  background-color: #4C4C4C;
}

[data-weui-theme=dark] .link-text {
  color: #fff;
}

[data-weui-theme=dark] .link-url {
  color: #999;
}

[data-weui-theme=dark] .link-action {
  color: #07c160;
  background-color: #2C2C2C;
  border-color: #07c160;
}
