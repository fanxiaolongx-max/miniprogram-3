.page {
  position: relative;
}

.container {
  padding: 0;
  background-color: #fff;
  min-height: 100vh;
}

/* 草稿标识（右上角固定定位） */
.draft-badge-fixed {
  position: fixed;
  top: 0;
  right: 0;
  z-index: 1000;
  padding: 8px 16px;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8787 100%);
  border-bottom-left-radius: 16px;
  box-shadow: 0 2px 8px rgba(255, 107, 107, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: calc(8px + env(safe-area-inset-top));
}

.draft-badge-text {
  font-size: 12px;
  color: #ffffff;
  font-weight: 600;
  letter-spacing: 0.5px;
}

.loading-container,
.error-container {
  text-align: center;
  padding: 60px 20px;
}

.loading-text,
.error-text {
  color: #999;
  font-size: 14px;
}

.error-text {
  color: #ff3b30;
  font-size: 16px;
}

.retry-btn {
  margin-top: 20px;
  padding: 12px 32px;
  background-color: #07c160;
  color: #fff;
  border-radius: 8px;
  font-size: 16px;
  border: none;
}

.retry-btn::after {
  border: none;
}

.article-container {
  background: #fff;
  padding: 0;
  padding-bottom: 80px;
}

.article-title {
  font-size: 22px;
  font-weight: 600;
  color: #333;
  line-height: 1.5;
  margin-bottom: 12px;
}

.article-meta {
  margin-bottom: 20px;
  padding-bottom: 16px;
  border-bottom: 1px solid #f0f0f0;
}

/* 第一行：时间和浏览量 */
.meta-row-1 {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #999;
  margin-bottom: 8px;
}

.meta-time {
  color: #999;
}

.meta-separator {
  color: #999;
  margin: 0 4px;
}

.meta-views {
  color: #999;
}

/* 第二行：发布者信息和设备信息 */
.meta-row-2 {
  display: flex;
  align-items: center;
  margin-top: 8px;
  flex-wrap: wrap;
  gap: 8px;
}

.author-nickname {
  font-size: 14px;
  font-weight: 600;
  color: #333;
}

.author-separator {
  margin: 0 4px;
}

.author-phone {
  font-size: 12px;
  color: #576b95;
  text-decoration: underline;
  cursor: pointer;
}

.device-tag {
  display: inline-block;
  font-size: 12px;
  color: #576b95;
  background-color: #f7f7f7;
  padding: 2px 6px;
  border-radius: 4px;
  margin-left: 4px;
}


/* 正文内容区域 */
.content-section {
  padding: 16px 20px;
}

/* 解析后的内容区域 */
.article-content-parsed {
  font-size: 16px;
  color: #333;
  line-height: 1.8;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.article-content {
  font-size: 16px;
  color: #333;
  line-height: 1.8;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.article-text-node {
  display: block;
  margin-bottom: 12px;
}

/* 内联图片 */
.article-image-node {
  margin: 16px 0;
  text-align: center;
}

.article-inline-image {
  max-width: 100%;
  width: 100%;
  height: auto;
  border-radius: 8px;
  display: block;
  background-color: #f5f5f5;
}

/* 内联视频 */
.article-video-node {
  margin: 16px 0;
}

.article-inline-video {
  width: 100%;
  height: 200px;
  border-radius: 8px;
  background-color: #000;
}

/* 内联链接 */
.article-link-node {
  margin: 12px 0;
}

.inline-link-item {
  display: flex;
  align-items: center;
  padding: 12px 16px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(102, 126, 234, 0.3);
  transition: all 0.2s;
}

.inline-link-item:active {
  transform: scale(0.98);
  box-shadow: 0 1px 4px rgba(102, 126, 234, 0.4);
}

.inline-link-icon {
  font-size: 18px;
  margin-right: 8px;
  flex-shrink: 0;
}

.inline-link-text {
  flex: 1;
  font-size: 15px;
  font-weight: 500;
  color: #fff;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.inline-link-hint {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.8);
  margin-left: 8px;
  flex-shrink: 0;
}

/* 元信息区域（地点、发布时间） */
.meta-section {
  padding: 0 20px;
  margin-bottom: 20px;
}

.meta-location {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
  padding: 8px 0;
}

.location-icon {
  font-size: 14px;
  margin-right: 6px;
}

.location-text {
  font-size: 14px;
  color: #666;
}

.meta-time-row {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #999;
  padding: 4px 0;
}

.meta-time {
  color: #999;
  margin-right: 8px;
}

/* 文章地址地图区域 */
.location-section {
  margin-top: 20px;
  padding: 0 20px;
  padding-top: 20px;
  border-top: 1px solid #f0f0f0;
}

.location-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  margin-bottom: 12px;
}

.location-info {
  margin-bottom: 12px;
}

.location-name {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  margin-bottom: 4px;
}

.location-address {
  font-size: 14px;
  color: #666;
  line-height: 1.5;
}

.location-map {
  width: 100%;
  height: 300px;
  border-radius: 8px;
  margin-bottom: 8px;
}

.location-tip {
  font-size: 12px;
  color: #999;
  text-align: center;
}

/* 图片画廊区域（横向滚动） */
.images-gallery-section {
  margin-top: 0;
  margin-bottom: 0;
  position: relative;
  width: 100vw;
  margin-left: calc(-50vw + 50%);
}

.images-gallery-swiper {
  width: 100%;
  height: 100vw;
  max-height: 500px;
}

.images-gallery-swiper-item {
  width: 100%;
  height: 100%;
}

.images-gallery-item {
  width: 100%;
  height: 100%;
  position: relative;
  background: #000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.images-gallery-image {
  width: 100%;
  height: 100%;
}

.images-gallery-video-item {
  width: 100%;
  height: 100%;
}

.images-gallery-video {
  width: 100%;
  height: 100%;
  background-color: #000;
}

.images-gallery-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.images-gallery-indicator {
  position: absolute;
  bottom: 50px;
  right: 20px;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  padding: 4px 12px;
  border-radius: 12px;
  font-size: 12px;
  z-index: 10;
}

.images-gallery-indicator-text {
  color: #fff;
}

/* 文章图片区域（向后兼容，已废弃） */
.images-section {
  margin-top: 30px;
  padding-top: 20px;
  border-top: 1px solid #f0f0f0;
}

.images-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  margin-bottom: 16px;
}

.images-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  gap: 8px;
  justify-content: flex-start;
  margin-top: 8px;
}

.article-image-thumbnail {
  width: calc(33.333% - 6px);
  height: 90px;
  border-radius: 6px;
  display: block;
  background-color: #f5f5f5;
  object-fit: cover;
  transition: all 0.2s;
  border: 1px solid #e9ecef;
  box-sizing: border-box;
}

.article-image-thumbnail:active {
  transform: scale(0.95);
  opacity: 0.7;
  border-color: #667eea;
}

/* 文章视频区域 */
.videos-section {
  margin-top: 30px;
  padding-top: 20px;
  border-top: 1px solid #f0f0f0;
}

.videos-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  margin-bottom: 16px;
}

.videos-container {
  display: flex;
  flex-direction: column;
  gap: 16px;
  margin-top: 8px;
}

.article-video {
  width: 100%;
  height: 200px;
  border-radius: 8px;
  background-color: #000;
  border: 1px solid #e9ecef;
  box-sizing: border-box;
}

/* 文章链接区域 */
.links-section {
  margin-top: 30px;
  padding-top: 20px;
  border-top: 1px solid #f0f0f0;
}

.links-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  margin-bottom: 16px;
}

.links-container {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.link-item {
  display: flex;
  align-items: center;
  padding: 12px 16px;
  background-color: #f8f9fa;
  border-radius: 8px;
  border: 1px solid #e9ecef;
  transition: all 0.2s;
}

.link-item:active {
  background-color: #e9ecef;
  transform: scale(0.98);
}

.link-icon {
  font-size: 20px;
  margin-right: 12px;
  flex-shrink: 0;
}

.link-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.link-text {
  font-size: 15px;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.link-url {
  font-size: 12px;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.link-action {
  font-size: 14px;
  color: #07c160;
  font-weight: 500;
  padding: 6px 12px;
  background-color: #fff;
  border-radius: 4px;
  border: 1px solid #07c160;
  flex-shrink: 0;
  margin-left: 12px;
}

/* rich-text 组件中的图片样式 */
/* 注意：rich-text组件对CSS支持有限，主要通过内联样式控制 */
/* 已在JS中为所有图片添加内联样式，使其自适应屏幕宽度 */

[data-weui-theme=dark] .container {
  background-color: #1F1F1F;
}

[data-weui-theme=dark] .article-container {
  background: #2C2C2C;
}

[data-weui-theme=dark] .article-title {
  color: #fff;
}

[data-weui-theme=dark] .article-content {
  color: #fff;
}

[data-weui-theme=dark] .article-meta {
  border-bottom-color: #3C3C3C;
}

[data-weui-theme=dark] .meta-time,
[data-weui-theme=dark] .meta-views,
[data-weui-theme=dark] .meta-separator {
  color: #999;
}

[data-weui-theme=dark] .author-nickname {
  color: #fff;
}

[data-weui-theme=dark] .author-phone {
  color: #999;
}

[data-weui-theme=dark] .device-tag {
  background-color: #3C3C3C;
  color: #7a9eff;
}

[data-weui-theme=dark] .error-text {
  color: #ff6b6b;
}

[data-weui-theme=dark] .location-section {
  border-top-color: #3C3C3C;
}

[data-weui-theme=dark] .location-title {
  color: #fff;
}

[data-weui-theme=dark] .location-name {
  color: #fff;
}

[data-weui-theme=dark] .location-address {
  color: #999;
}

[data-weui-theme=dark] .location-tip {
  color: #666;
}

[data-weui-theme=dark] .images-section {
  border-top-color: #3C3C3C;
}

[data-weui-theme=dark] .images-title {
  color: #fff;
}

[data-weui-theme=dark] .article-image-thumbnail {
  background-color: #3C3C3C;
}

[data-weui-theme=dark] .videos-section {
  border-top-color: #3C3C3C;
}

[data-weui-theme=dark] .videos-title {
  color: #fff;
}

[data-weui-theme=dark] .article-video {
  border-color: #3C3C3C;
}

[data-weui-theme=dark] .article-content-parsed {
  color: #fff;
}

[data-weui-theme=dark] .article-inline-image {
  background-color: #3C3C3C;
}

[data-weui-theme=dark] .article-inline-video {
  border-color: #3C3C3C;
}

[data-weui-theme=dark] .links-section {
  border-top-color: #3C3C3C;
}

[data-weui-theme=dark] .links-title {
  color: #fff;
}

[data-weui-theme=dark] .link-item {
  background-color: #3C3C3C;
  border-color: #4C4C4C;
}

[data-weui-theme=dark] .link-item:active {
  background-color: #4C4C4C;
}

[data-weui-theme=dark] .link-text {
  color: #fff;
}

[data-weui-theme=dark] .link-url {
  color: #999;
}

[data-weui-theme=dark] .link-action {
  color: #07c160;
  background-color: #2C2C2C;
  border-color: #07c160;
}

/* 评论区 */
.comments-section {
  padding: 0 20px;
  margin-top: 20px;
  border-top: 1px solid #f0f0f0;
  padding-top: 20px;
}

.comments-header {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
}

.comments-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  margin-right: 8px;
}

.comments-count {
  font-size: 14px;
  color: #999;
}

.comments-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.comment-load-more {
  text-align: center;
  padding: 12px 0;
  margin-top: 8px;
}

.comment-load-more-btn {
  font-size: 12px;
  color: #576b95;
  padding: 6px 16px;
  border: 1px solid #e9ecef;
  border-radius: 16px;
  background: #f8f9fa;
  display: inline-block;
}

.comment-load-more-btn:active {
  background: #e9ecef;
}

.comment-item {
  display: flex;
  gap: 12px;
}

.comment-root {
  margin-bottom: 0;
}

.comment-replies {
  margin-top: 8px;
  padding-left: 36px;
  border-left: 2px solid #f0f0f0;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.comment-reply {
  margin-bottom: 0;
}

.comment-reply-avatar {
  width: 20px;
  height: 20px;
}

.comment-avatar {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
}

.comment-avatar-emoji {
  font-size: 16px;
  line-height: 1;
}

.comment-reply-avatar .comment-avatar-emoji {
  font-size: 14px;
}

.comment-content {
  flex: 1;
  min-width: 0;
}

.comment-header {
  display: flex;
  align-items: center;
  margin-bottom: 4px;
}

.comment-author {
  font-size: 12px;
  font-weight: 500;
  color: #333;
  margin-right: 6px;
}

.comment-time {
  font-size: 10px;
  color: #999;
}

.comment-text {
  font-size: 13px;
  color: #333;
  line-height: 1.5;
  margin-bottom: 6px;
  word-wrap: break-word;
}

.comment-actions {
  display: flex;
  align-items: center;
  gap: 16px;
}

.comment-action-btn {
  display: flex;
  align-items: center;
  gap: 4px;
}

.comment-action-icon {
  font-size: 14px;
}

.comment-action-count,
.comment-action-text {
  font-size: 11px;
  color: #999;
}

.comment-delete-btn .comment-action-text {
  color: #ff3b30;
}

.comment-delete-btn:active {
  opacity: 0.7;
}

.comments-empty {
  padding: 40px 0;
  text-align: center;
}

.comments-empty-text {
  font-size: 14px;
  color: #999;
}

/* 底部间距 */
.bottom-spacer {
  height: 20px;
}

/* 底部操作栏 */
.bottom-action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-top: 1px solid #f0f0f0;
  padding: 12px 16px;
  padding-bottom: calc(12px + env(safe-area-inset-bottom));
  display: flex;
  align-items: center;
  gap: 12px;
  z-index: 100;
}

.action-input-wrapper {
  flex: 1;
  height: 36px;
  background: #f5f5f5;
  border-radius: 18px;
  display: flex;
  align-items: center;
  padding: 0 16px;
}

.action-input-placeholder {
  font-size: 14px;
  color: #999;
}

.action-buttons {
  display: flex;
  align-items: center;
  gap: 20px;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2px;
}

.action-icon {
  font-size: 24px;
  line-height: 1;
}

.action-count {
  font-size: 12px;
  color: #666;
}

.action-btn.liked .action-icon {
  filter: none;
  transform: scale(1.1);
}

.action-btn.liked .action-count {
  color: #ff2442;
  font-weight: 600;
}

.action-btn.favorited .action-icon {
  filter: none;
  transform: scale(1.1);
}

.action-btn.favorited .action-count {
  color: #ff9500;
  font-weight: 600;
}

/* 评论输入框 */
.comment-input-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-top: 1px solid #f0f0f0;
  padding: 12px 16px;
  padding-bottom: calc(12px + env(safe-area-inset-bottom));
  z-index: 200;
}

.comment-input-wrapper {
  display: flex;
  align-items: center;
  gap: 12px;
}

.comment-input {
  flex: 1;
  height: 40px;
  background: #f8f9fa;
  border: 1px solid #e9ecef;
  border-radius: 20px;
  padding: 0 16px;
  font-size: 15px;
  color: #333;
  box-sizing: border-box;
}

.comment-input:focus {
  border-color: #ff2442;
  background: #fff;
}

.comment-send-btn {
  padding: 10px 24px;
  background: #e9ecef;
  color: #666;
  border-radius: 20px;
  font-size: 15px;
  font-weight: 500;
  min-width: 60px;
  text-align: center;
  transition: all 0.2s;
  box-sizing: border-box;
}

.comment-send-btn.active {
  background: #ff2442;
  color: #fff;
}

.comment-send-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.comment-send-btn.submitting {
  opacity: 0.7;
  pointer-events: none;
}

/* 暗色模式 */
[data-weui-theme=dark] .content-section,
[data-weui-theme=dark] .meta-section,
[data-weui-theme=dark] .comments-section {
  background: #2C2C2C;
}

[data-weui-theme=dark] .meta-location,
[data-weui-theme=dark] .meta-time-row {
  color: #ccc;
}

[data-weui-theme=dark] .location-text {
  color: #999;
}

[data-weui-theme=dark] .comments-title,
[data-weui-theme=dark] .comment-author,
[data-weui-theme=dark] .comment-text {
  color: #fff;
}

[data-weui-theme=dark] .comment-avatar {
  background: #333;
}

[data-weui-theme=dark] .bottom-action-bar,
[data-weui-theme=dark] .comment-input-bar {
  background: #2C2C2C;
  border-color: #333;
}

[data-weui-theme=dark] .action-input-wrapper,
[data-weui-theme=dark] .comment-input {
  background: #333;
  color: #fff;
  border-color: #444;
}

[data-weui-theme=dark] .comment-input:focus {
  border-color: #ff2442;
  background: #2C2C2C;
}

[data-weui-theme=dark] .comment-send-btn {
  background: #444;
  color: #999;
}

[data-weui-theme=dark] .comment-send-btn.active {
  background: #ff2442;
  color: #fff;
}

[data-weui-theme=dark] .action-count {
  color: #999;
}

[data-weui-theme=dark] .action-btn.liked .action-count {
  color: #ff6b9d;
}

[data-weui-theme=dark] .action-btn.favorited .action-count {
  color: #ffb84d;
}

/* 暗色主题下的草稿标识 */
[data-weui-theme=dark] .draft-badge-fixed {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8787 100%);
  box-shadow: 0 2px 8px rgba(255, 107, 107, 0.4);
}
