@import "../common/index.wxss";

.page {
  min-height: 100vh;
  background: #f5f5f5;
}

.container {
  padding: 32rpx;
  padding-bottom: env(safe-area-inset-bottom);
}

.loading-container,
.error-container,
.empty-container {
  padding: 160rpx 0;
  text-align: center;
}

.loading-text,
.error-text,
.empty-text {
  font-size: 28rpx;
  color: #999999;
  display: block;
  margin-bottom: 24rpx;
}

.retry-btn {
  margin-top: 24rpx;
  color: #333333;
  border-color: #e0e0e0;
}

.messages-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.message-card {
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s;
}

.message-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.message-content-wrapper {
  width: 100%;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.message-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.message-meta-row {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 12rpx;
}

.message-type-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: #f5f5f5;
}

.message-type-badge.type-comment {
  background: #e3f2fd;
}

.message-type-badge.type-like {
  background: #fce4ec;
}

.message-type-badge.type-favorite {
  background: #fff3e0;
}

.message-type-icon {
  font-size: 24rpx;
  line-height: 1;
}

.message-type-text {
  font-size: 22rpx;
  color: #666666;
  font-weight: 500;
}

.message-type-badge.type-comment .message-type-text {
  color: #1976d2;
}

.message-type-badge.type-like .message-type-text {
  color: #c2185b;
}

.message-type-badge.type-favorite .message-type-text {
  color: #f57c00;
}

.message-post-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.message-meta-row {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 12rpx;
}

.message-time {
  font-size: 22rpx;
  color: #999999;
  line-height: 1.5;
}

.message-comment-content {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
  padding: 16rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.message-user {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.message-user-name {
  font-size: 24rpx;
  color: #333333;
  font-weight: 500;
}

.message-user-action {
  font-size: 24rpx;
  color: #999999;
}

.load-more-container {
  padding: 40rpx 0;
  text-align: center;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.load-more-btn {
  color: #333333;
  border-color: #e0e0e0;
}

.loading-more {
  padding: 20rpx 0;
}

.loading-more-text {
  font-size: 26rpx;
  color: #999999;
}

.no-more {
  padding: 20rpx 0;
}

.no-more-text {
  font-size: 24rpx;
  color: #cccccc;
}

/* 暗色主题 */
[data-weui-theme=dark] .page {
  background: #000000;
}

[data-weui-theme=dark] .message-card {
  background: #2c2c2e;
}

[data-weui-theme=dark] .message-post-title,
[data-weui-theme=dark] .message-user-name {
  color: #ffffff;
}

[data-weui-theme=dark] .message-time,
[data-weui-theme=dark] .message-user-action {
  color: #8e8e93;
}

[data-weui-theme=dark] .message-type-badge {
  background: #2c2c2e;
}

[data-weui-theme=dark] .message-type-badge.type-comment {
  background: #1e3a5f;
}

[data-weui-theme=dark] .message-type-badge.type-like {
  background: #4a1e2e;
}

[data-weui-theme=dark] .message-type-badge.type-favorite {
  background: #4a3a1e;
}

[data-weui-theme=dark] .message-type-text {
  color: #8e8e93;
}

[data-weui-theme=dark] .message-type-badge.type-comment .message-type-text {
  color: #64b5f6;
}

[data-weui-theme=dark] .message-type-badge.type-like .message-type-text {
  color: #f48fb1;
}

[data-weui-theme=dark] .message-type-badge.type-favorite .message-type-text {
  color: #ffb74d;
}

[data-weui-theme=dark] .message-comment-content {
  background: #2c2c2e;
  color: #8e8e93;
}

[data-weui-theme=dark] .loading-text,
[data-weui-theme=dark] .error-text,
[data-weui-theme=dark] .empty-text {
  color: #8e8e93;
}

[data-weui-theme=dark] .retry-btn,
[data-weui-theme=dark] .load-more-btn {
  color: #ffffff;
  border-color: #38383a;
}

[data-weui-theme=dark] .loading-more-text {
  color: #8e8e93;
}

[data-weui-theme=dark] .no-more-text {
  color: #666666;
}

