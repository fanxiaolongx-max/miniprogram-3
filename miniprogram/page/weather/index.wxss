.container {
  padding: 0;
  background-color: #F5F7FA;
  min-height: 100vh;
}

.weather-section {
  padding: 16px;
}

/* 加载和错误状态 */
.loading-container,
.empty-container {
  text-align: center;
  padding: 60px 20px;
}

.loading-text,
.empty-text {
  color: #999;
  font-size: 14px;
}

.error-container {
  text-align: center;
  padding: 60px 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20px;
}

.error-text {
  color: #ff3b30;
  font-size: 16px;
}

.retry-btn {
  padding: 12px 32px;
  background-color: #07c160;
  color: #fff;
  border-radius: 8px;
  font-size: 16px;
  border: none;
}

.retry-btn::after {
  border: none;
}

/* 全域预警 */
.global-alert {
  display: flex;
  align-items: flex-start;
  gap: 12px;
  padding: 16px;
  border-radius: 12px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.alert-high {
  background: linear-gradient(135deg, #ff3b30 0%, #ff6b6b 100%);
  color: #fff;
}

.alert-medium {
  background: linear-gradient(135deg, #ff9500 0%, #ffb84d 100%);
  color: #fff;
}

.alert-low {
  background: linear-gradient(135deg, #ffcc00 0%, #ffdd44 100%);
  color: #333;
}

.alert-icon {
  font-size: 24px;
  flex-shrink: 0;
}

.alert-message {
  font-size: 15px;
  line-height: 1.6;
  flex: 1;
}

/* 板块标题 */
.section-block {
  margin-bottom: 24px;
}

.section-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  margin-bottom: 16px;
}

/* 热门景点横向滑动 */
.attractions-scroll {
  width: 100%;
  white-space: nowrap;
}

.attractions-container {
  display: inline-flex;
  gap: 12px;
  padding-bottom: 8px;
}

.attraction-card {
  display: inline-block;
  width: 280px;
  background: #fff;
  border-radius: 12px;
  padding: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  vertical-align: top;
}

.attraction-name {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  margin-bottom: 12px;
  padding-bottom: 8px;
  border-bottom: 1px solid #f0f0f0;
}

.attraction-info {
  display: flex;
  flex-direction: column;
  gap: 10px;
  margin-bottom: 12px;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 8px;
  flex-wrap: wrap;
}

.info-icon {
  font-size: 16px;
  flex-shrink: 0;
}

.info-text {
  font-size: 14px;
  color: #666;
  flex: 1;
}

.info-badge {
  font-size: 12px;
  color: #07c160;
  background: #e6f7f0;
  padding: 2px 8px;
  border-radius: 4px;
  margin-left: auto;
}

.attraction-suggestion {
  display: flex;
  align-items: flex-start;
  gap: 6px;
  padding: 10px;
  background: #f8f8f8;
  border-radius: 8px;
  margin-top: 8px;
}

.suggestion-icon {
  font-size: 14px;
  flex-shrink: 0;
}

.suggestion-text {
  font-size: 13px;
  color: #333;
  line-height: 1.5;
  flex: 1;
}

/* 路况广播时间轴 */
.traffic-timeline {
  position: relative;
  padding-left: 24px;
}

.traffic-item {
  position: relative;
  margin-bottom: 20px;
}

.timeline-dot {
  position: absolute;
  left: -24px;
  top: 6px;
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background: #07c160;
  border: 2px solid #fff;
  box-shadow: 0 0 0 2px #07c160;
  z-index: 2;
}

.timeline-line {
  position: absolute;
  left: -18px;
  top: 18px;
  width: 2px;
  height: calc(100% + 2px);
  background: #e0e0e0;
  z-index: 1;
}

.traffic-content {
  background: #fff;
  border-radius: 12px;
  padding: 14px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.traffic-header {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 8px;
}

.traffic-time {
  font-size: 14px;
  font-weight: 600;
  color: #333;
}

.traffic-type {
  display: flex;
  align-items: center;
  gap: 4px;
}

.traffic-type-icon {
  font-size: 14px;
}

.traffic-type-text {
  font-size: 13px;
  color: #666;
}

.traffic-message {
  font-size: 14px;
  color: #666;
  line-height: 1.6;
}

.traffic-location {
  font-weight: 500;
  color: #333;
}

.traffic-text {
  color: #666;
}

/* 暗色模式 */
[data-weui-theme=dark] .container {
  background-color: #1F1F1F;
}

[data-weui-theme=dark] .section-title {
  color: #fff;
}

[data-weui-theme=dark] .attraction-card {
  background: #2C2C2C;
}

[data-weui-theme=dark] .attraction-name {
  color: #fff;
  border-bottom-color: #3C3C3C;
}

[data-weui-theme=dark] .info-text {
  color: #ccc;
}

[data-weui-theme=dark] .suggestion-text {
  color: #fff;
}

[data-weui-theme=dark] .attraction-suggestion {
  background: #1F1F1F;
}

[data-weui-theme=dark] .traffic-content {
  background: #2C2C2C;
}

[data-weui-theme=dark] .traffic-time {
  color: #fff;
}

[data-weui-theme=dark] .traffic-location {
  color: #fff;
}

[data-weui-theme=dark] .traffic-text {
  color: #ccc;
}

[data-weui-theme=dark] .timeline-line {
  background: #3C3C3C;
}

[data-weui-theme=dark] .error-text {
  color: #ff6b6b;
}
