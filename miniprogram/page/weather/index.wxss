.container {
  padding: 20px;
  background-color: #F5F7FA;
  min-height: 100vh;
}

.weather-section {
  max-width: 600px;
  margin: 0 auto;
}

.section-title {
  font-size: 20px;
  font-weight: 600;
  color: #333;
  margin-bottom: 20px;
}

/* 加载状态 */
.loading-container {
  text-align: center;
  padding: 40px 20px;
}

.loading-text {
  color: #999;
  font-size: 14px;
}

/* 错误状态 */
.error-container {
  text-align: center;
  padding: 60px 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20px;
}

.error-text {
  color: #ff3b30;
  font-size: 16px;
}

.retry-btn {
  margin-top: 10px;
  padding: 12px 32px;
  background-color: #07c160;
  color: #fff;
  border-radius: 8px;
  font-size: 16px;
  border: none;
}

.retry-btn::after {
  border: none;
}

/* 天气卡片 */
.weather-card {
  background-color: #fff;
  border-radius: 12px;
  padding: 40px 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20px;
}

.weather-icon {
  font-size: 64px;
}

.weather-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16px;
}

.weather-main {
  font-size: 32px;
  font-weight: 600;
  color: #333;
  text-align: center;
}

.weather-details {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  margin-top: 8px;
}

.weather-detail-item {
  font-size: 16px;
  color: #666;
}

[data-weui-theme=dark] .container {
  background-color: #1F1F1F;
}

[data-weui-theme=dark] .section-title {
  color: #fff;
}

[data-weui-theme=dark] .weather-card {
  background-color: #2C2C2C;
}

[data-weui-theme=dark] .weather-main {
  color: #fff;
}

[data-weui-theme=dark] .weather-detail-item {
  color: #ccc;
}

[data-weui-theme=dark] .error-text {
  color: #ff6b6b;
}

