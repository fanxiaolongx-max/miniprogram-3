.container {
  padding: 0;
  background-color: #fff;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部操作栏 */
.header-section {
  background: #fff;
  padding: 12px 16px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.back-icon {
  font-size: 28px;
  color: #333;
  line-height: 1;
  font-weight: 300;
}

.back-btn:active {
  opacity: 0.6;
}

.header-title {
  font-size: 17px;
  font-weight: 600;
  color: #333;
  text-align: center;
}

.publish-btn {
  padding: 6px 20px;
  background: #ff2442;
  color: #fff;
  border-radius: 20px;
  font-size: 15px;
  font-weight: 500;
  flex-shrink: 0;
}

.publish-btn.publishing {
  opacity: 0.6;
}

.publish-btn:active {
  background: #e01e3a;
  transform: scale(0.95);
}

/* 主编辑容器 */
.editor-container {
  flex: 1;
  width: 100%;
  padding: 0;
  box-sizing: border-box;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

/* 媒体预览区域 */
.media-section {
  padding: 16px;
  background: #fff;
}

.media-scroll {
  width: 100%;
  white-space: nowrap;
}

.media-row {
  display: inline-flex;
  gap: 8px;
  align-items: center;
}

.media-item {
  position: relative;
  width: 80px;
  height: 80px;
  flex-shrink: 0;
  border-radius: 8px;
  overflow: hidden;
  background: #f5f5f5;
}

.media-preview {
  width: 100%;
  height: 100%;
}

.media-video-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
}

.media-video-play-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 24px;
  height: 24px;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 12px;
  line-height: 1;
  padding-left: 2px;
}

.media-delete {
  position: absolute;
  top: 4px;
  right: 4px;
  width: 18px;
  height: 18px;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  line-height: 1;
}

.media-add-btn {
  width: 80px;
  height: 80px;
  flex-shrink: 0;
  border: 1px dashed #d9d9d9;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fafafa;
}

.media-add-btn:active {
  background: #f0f0f0;
}

.add-icon {
  font-size: 28px;
  color: #999;
  line-height: 1;
  font-weight: 300;
}

/* 标题输入区 */
.title-section {
  padding: 16px;
  background: #fff;
}

.title-input {
  width: 100%;
  font-size: 18px;
  font-weight: 500;
  color: #333 !important;
  line-height: 1.5;
  padding: 0;
  border: none;
  background: transparent;
  -webkit-text-fill-color: #333 !important;
}

.title-input.error {
  border-bottom: 2px solid #ff2442;
  padding-bottom: 8px;
}

/* 正文输入区 */
.content-section {
  padding: 16px;
  padding-top: 0;
  background: #fff;
}

.content-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.content-label {
  font-size: 15px;
  font-weight: 500;
  color: #333;
}

.fullscreen-btn {
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 6px 12px;
  background: #f5f5f5;
  border-radius: 16px;
  font-size: 13px;
  color: #666;
}

.fullscreen-btn:active {
  background: #e8e8e8;
}

.fullscreen-icon {
  font-size: 14px;
  line-height: 1;
}

.fullscreen-text {
  font-size: 13px;
}

.content-editor {
  width: 100%;
  min-height: 300px;
  font-size: 16px;
  line-height: 1.8;
  color: #333;
}

.content-editor.fullscreen {
  min-height: calc(100vh - 200px);
  height: calc(100vh - 200px);
}

/* 功能选项区域 */
.options-section {
  background: #fff;
  border-top: 8px solid #f5f5f5;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 16px;
  min-height: 56px;
  box-sizing: border-box;
  border-bottom: 1px solid #f0f0f0;
}

.option-item:last-child {
  border-bottom: none;
}

.option-item:active {
  background: #fafafa;
}

.option-icon {
  font-size: 20px;
  margin-right: 12px;
  flex-shrink: 0;
}

.option-label {
  font-size: 15px;
  color: #333;
  flex: 1;
}

.option-value {
  font-size: 15px;
  color: #333;
  margin-right: 8px;
  max-width: 200px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.option-placeholder {
  font-size: 15px;
  color: #999;
  margin-right: 8px;
}

.option-arrow {
  font-size: 20px;
  color: #999;
  flex-shrink: 0;
  font-weight: 300;
}

.option-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.option-input {
  width: 100%;
  font-size: 15px;
  color: #333 !important;
  text-align: right;
  padding: 0;
  border: none;
  background: transparent;
  -webkit-text-fill-color: #333 !important;
}

.option-input::placeholder {
  color: #999;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-top: 1px solid #f0f0f0;
  padding: 12px 16px;
  padding-bottom: calc(12px + env(safe-area-inset-bottom));
  display: flex;
  gap: 12px;
  z-index: 100;
}

.draft-btn {
  flex: 1;
  height: 44px;
  background: #f5f5f5;
  color: #666;
  border-radius: 22px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  font-weight: 500;
}

.draft-btn:active {
  background: #e8e8e8;
}

.publish-btn-bottom {
  flex: 2;
  height: 44px;
  background: #ff2442;
  color: #fff;
  border-radius: 22px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  font-weight: 500;
}

.publish-btn-bottom.publishing {
  opacity: 0.6;
}

.publish-btn-bottom:active {
  background: #e01e3a;
}

/* 底部间距 */
.bottom-spacer {
  flex-shrink: 0;
}

/* 媒体选择弹窗 */
.media-picker-modal {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 16px 16px 0 0;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 1001;
}

.media-picker-title {
  text-align: center;
  padding: 20px 16px 16px;
  font-size: 16px;
  font-weight: 500;
  color: #333;
  border-bottom: 1px solid #f0f0f0;
}

.media-picker-options {
  display: flex;
  padding: 16px;
  gap: 16px;
}

.media-picker-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24px 16px;
  background: #f5f5f5;
  border-radius: 12px;
  gap: 8px;
}

.media-picker-option:active {
  background: #e8e8e8;
}

.media-picker-icon {
  font-size: 32px;
  line-height: 1;
}

.media-picker-label {
  font-size: 14px;
  color: #333;
}

.media-picker-cancel {
  padding: 16px;
  text-align: center;
  font-size: 16px;
  color: #666;
  border-top: 1px solid #f0f0f0;
}

.media-picker-cancel:active {
  background: #f5f5f5;
}

/* 视频预览弹窗 */
.video-preview-modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  max-width: 600px;
  background: #000;
  border-radius: 12px;
  overflow: hidden;
  z-index: 1002;
}

.video-preview-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px 20px;
  background: rgba(0, 0, 0, 0.8);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.video-preview-title {
  font-size: 16px;
  font-weight: 500;
  color: #fff;
}

.video-preview-close {
  font-size: 24px;
  color: #fff;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.video-preview-close:active {
  opacity: 0.6;
}

.video-preview-content {
  width: 100%;
  padding: 0;
  background: #000;
}

.video-preview-player {
  width: 100%;
  height: auto;
  min-height: 300px;
  background: #000;
}

/* 弹窗遮罩 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.modal-content {
  width: 100%;
  background: #fff;
  border-radius: 16px 16px 0 0;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px 20px;
  border-bottom: 1px solid #f0f0f0;
}

.modal-title {
  font-size: 17px;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 24px;
  color: #999;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  flex: 1;
  max-height: calc(70vh - 60px);
}

/* 分类选项 */
.category-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px 20px;
  border-bottom: 1px solid #f0f0f0;
  font-size: 16px;
  color: #333;
}

.category-option.selected {
  color: #ff2442;
}

.check-icon {
  color: #ff2442;
  font-size: 18px;
}

.empty-category {
  padding: 40px 20px;
  text-align: center;
  color: #999;
}

/* 错误提示 */
.error-text {
  font-size: 12px;
  color: #ff2442;
  margin-top: 4px;
  margin-left: 16px;
  margin-right: 16px;
}

/* 上传进度提示 */
.upload-progress-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.upload-progress-container {
  background: #fff;
  border-radius: 16px;
  padding: 32px 40px;
  min-width: 280px;
  max-width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16px;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
}

.upload-progress-icon {
  font-size: 48px;
  line-height: 1;
}

.upload-progress-text {
  font-size: 16px;
  color: #333;
  font-weight: 500;
  text-align: center;
}

.upload-progress-bar {
  width: 100%;
  height: 8px;
  background: #f0f0f0;
  border-radius: 4px;
  overflow: hidden;
  position: relative;
}

.upload-progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #ff2442 0%, #e01e3a 100%);
  border-radius: 4px;
  transition: width 0.3s ease;
}

.upload-progress-percent {
  font-size: 14px;
  color: #666;
  font-weight: 500;
}

/* 暗色模式 */
.dark-theme .container {
  background-color: #1F1F1F;
}

.dark-theme .header-section,
.dark-theme .media-section,
.dark-theme .title-section,
.dark-theme .content-section,
.dark-theme .options-section,
.dark-theme .bottom-bar {
  background: #2C2C2C;
  border-color: #333;
}

.dark-theme .content-label {
  color: #fff;
}

.dark-theme .fullscreen-btn {
  background: #333;
  color: #999;
}

.dark-theme .fullscreen-btn:active {
  background: #444;
}

.dark-theme .header-title,
.dark-theme .title-input,
.dark-theme .option-label,
.dark-theme .option-value {
  color: #fff;
}

.dark-theme .back-icon {
  color: #fff;
}

.dark-theme .media-add-btn {
  background: #333;
  border-color: #444;
}

.dark-theme .add-icon {
  color: #999;
}

.dark-theme .option-item {
  border-color: #333;
}

.dark-theme .option-placeholder {
  color: #999;
}

.dark-theme .option-input {
  color: #fff !important;
  -webkit-text-fill-color: #fff !important;
}

.dark-theme .draft-btn {
  background: #333;
  color: #ccc;
}

.dark-theme .modal-content {
  background: #2C2C2C;
}

.dark-theme .modal-header {
  border-color: #333;
}

.dark-theme .modal-title,
.dark-theme .category-option {
  color: #fff;
}

.dark-theme .upload-progress-container {
  background: #2C2C2C;
}

.dark-theme .upload-progress-text {
  color: #fff;
}

.dark-theme .upload-progress-bar {
  background: #1F1F1F;
}

.dark-theme .upload-progress-percent {
  color: #ccc;
}
