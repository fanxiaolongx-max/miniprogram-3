.container {
  padding: 0;
  background-color: #fff;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部操作栏 */
.header-section {
  background: #fff;
  padding: 12px 16px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.cancel-btn {
  padding: 8px 0;
  color: #666;
  font-size: 16px;
  flex-shrink: 0;
}

.cancel-btn:active {
  opacity: 0.6;
}

.header-title {
  font-size: 17px;
  font-weight: 600;
  color: #333;
  flex: 1;
  text-align: center;
}

.save-btn {
  padding: 8px 20px;
  background: #07c160;
  color: #fff;
  border-radius: 20px;
  font-size: 15px;
  font-weight: 500;
  flex-shrink: 0;
}

.save-btn:active {
  background: #06ad56;
  transform: scale(0.95);
}

/* 主编辑容器 */
.editor-container {
  flex: 1;
  width: 100%;
  padding: 0;
  padding-bottom: 0; /* 移除底部padding */
  box-sizing: border-box;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

/* 封面预览（自动提取，只显示） */
.cover-preview-section {
  padding: 16px;
  border-bottom: 1px solid #f0f0f0;
}

.cover-preview-image {
  width: 100%;
  height: 200px;
  border-radius: 8px;
  display: block;
}

/* 标题输入区 */
.title-section {
  padding: 20px 16px;
  border-bottom: 1px solid #f0f0f0;
}

.title-input {
  width: 100%;
  font-size: 22px;
  font-weight: 600;
  color: #333 !important;
  line-height: 1.5;
  padding: 0;
  border: none;
  background: transparent;
  -webkit-text-fill-color: #333 !important;
}

.title-input.error {
  border-bottom: 2px solid #ff3b30;
  padding-bottom: 8px;
}

/* 分类选择 */
.category-section {
  display: flex;
  align-items: center;
  padding: 16px;
  border-bottom: 1px solid #f0f0f0;
  background: #fff;
}

.category-label {
  font-size: 15px;
  color: #666;
  margin-right: 12px;
  flex-shrink: 0;
}

.category-value {
  font-size: 15px;
  color: #333;
  flex: 1;
}

.category-placeholder {
  font-size: 15px;
  color: #999;
  flex: 1;
}

.category-arrow {
  font-size: 20px;
  color: #999;
  margin-left: 8px;
  flex-shrink: 0;
}

/* 联系方式区域 - 与分类选择样式一致 */
.contact-section {
  display: flex;
  flex-direction: column;
  background: #fff;
  border-bottom: 1px solid #f0f0f0;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 16px;
  min-height: 48px;
  box-sizing: border-box;
}

.contact-item.error {
  background-color: #fff5f5;
}

.contact-label {
  font-size: 15px;
  color: #666;
  margin-right: 12px;
  flex-shrink: 0;
  display: flex;
  align-items: center;
}

.required-mark {
  color: #ff3b30;
  margin-left: 4px;
  font-size: 15px;
}

.contact-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  min-width: 0;
}

.contact-input {
  width: 100%;
  font-size: 15px;
  color: #333 !important;
  text-align: right;
  padding: 0;
  border: none;
  background: transparent;
  -webkit-text-fill-color: #333 !important;
  box-sizing: border-box;
  line-height: 1.5;
}

.contact-input::placeholder {
  color: #999;
}

.contact-value-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  min-width: 0;
}

.contact-value {
  font-size: 15px;
  color: #333;
  flex: 1;
  text-align: right;
  word-break: break-all;
  margin-right: 8px;
}

.contact-placeholder {
  font-size: 15px;
  color: #999;
  flex: 1;
  text-align: right;
  margin-right: 8px;
}

.contact-arrow {
  font-size: 20px;
  color: #999;
  margin-left: 8px;
  flex-shrink: 0;
  font-weight: 300;
}

.contact-divider {
  height: 1px;
  background: #f0f0f0;
  margin: 0 16px;
}

/* 内容输入区 */
.content-section {
  padding: 20px 16px;
  padding-bottom: 20px; /* 减少底部padding */
  min-height: auto; /* 移除固定最小高度，让内容自然撑开 */
  background: #fff;
}

.content-editor {
  width: 100%;
  min-height: 500px; /* 增加最小高度，提供更多舒适的编辑空间 */
  font-size: 16px;
  line-height: 1.8;
  padding-bottom: 0; /* 移除编辑器内部底部padding */
}

/* 媒体预览区 */
.media-preview-section {
  padding: 16px;
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
}

.media-item {
  position: relative;
  width: calc(50% - 6px);
  aspect-ratio: 1;
  border-radius: 8px;
  overflow: hidden;
}

.media-preview {
  width: 100%;
  height: 100%;
}

.media-delete {
  position: absolute;
  top: 8px;
  right: 8px;
  width: 24px;
  height: 24px;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  line-height: 1;
}

/* 底部工具栏 */
.toolbar-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-top: 1px solid #f0f0f0;
  z-index: 100;
  padding-bottom: env(safe-area-inset-bottom);
}

.toolbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px;
  height: 100%;
}

.toolbar-left,
.toolbar-center,
.toolbar-right {
  display: flex;
  align-items: center;
  gap: 24px; /* 增加间距，更大气 */
}

.toolbar-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;
  border-radius: 0; /* 移除圆角，更简约 */
  transition: all 0.2s;
  background: transparent; /* 无背景色 */
  border: none;
  padding: 0;
}

.toolbar-btn:active {
  opacity: 0.6; /* 点击时只改变透明度 */
  transform: scale(0.96);
}

.toolbar-btn.disabled {
  opacity: 0.25; /* 禁用状态更透明 */
  cursor: not-allowed;
}

.toolbar-icon {
  font-size: 22px; /* 稍微减小图标尺寸，更精致 */
  line-height: 1;
  color: #333; /* 统一的深灰色 */
  font-weight: 400;
}

/* 底部间距 - 只保留必要的空间避免被工具栏遮挡 */
.bottom-spacer {
  flex-shrink: 0;
  /* 高度由内联样式动态设置：toolbarHeight + 20px */
}

/* 弹窗遮罩 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.modal-content {
  width: 100%;
  background: #fff;
  border-radius: 16px 16px 0 0;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px 20px;
  border-bottom: 1px solid #f0f0f0;
}

.modal-title {
  font-size: 17px;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 24px;
  color: #999;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  flex: 1;
  max-height: calc(70vh - 60px);
}

/* 分类选项 */
.category-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px 20px;
  border-bottom: 1px solid #f0f0f0;
  font-size: 16px;
  color: #333;
}

.category-option.selected {
  color: #07c160;
}

.check-icon {
  color: #07c160;
  font-size: 18px;
}

/* 字体选项弹窗 */
.font-modal {
  padding: 20px;
}

.font-options {
  display: flex;
  gap: 20px;
  justify-content: center;
}

.font-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  padding: 16px;
  border-radius: 8px;
}

.font-option:active {
  background: #f5f5f5;
}

.font-icon {
  font-size: 24px;
  font-weight: 600;
  color: #333;
}

.font-label {
  font-size: 12px;
  color: #666;
}

/* 更多选项弹窗 */
.more-modal {
  padding: 20px;
}

.more-options {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.more-option {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 16px 20px;
  border-bottom: 1px solid #f0f0f0;
}

.more-option:last-child {
  border-bottom: none;
}

.more-option:active {
  background: #f5f5f5;
}

.more-icon {
  font-size: 20px;
  width: 32px;
  text-align: center;
}

.more-label {
  font-size: 16px;
  color: #333;
}

/* 错误提示 */
.error-text {
  font-size: 12px;
  color: #ff3b30;
  margin-top: 8px;
}

/* 暗色模式 */
.dark-theme .container {
  background-color: #1F1F1F;
}

.dark-theme .header-section,
.dark-theme .cover-preview-section,
.dark-theme .title-section,
.dark-theme .category-section,
.dark-theme .contact-section,
.dark-theme .content-section,
.dark-theme .toolbar-section {
  background: #2C2C2C;
  border-color: #333;
}

.dark-theme .header-title,
.dark-theme .category-value {
  color: #fff;
}

.dark-theme .cancel-btn,
.dark-theme .category-label {
  color: #ccc;
}

.dark-theme .contact-section {
  background: #2C2C2C;
  border-color: #333;
}

.dark-theme .contact-item {
  background: #2C2C2C;
}

.dark-theme .contact-item.error {
  background-color: #3a2a2a;
}

.dark-theme .contact-label {
  color: #ccc;
}

.dark-theme .contact-input {
  color: #fff !important;
  -webkit-text-fill-color: #fff !important;
}

.dark-theme .contact-value {
  color: #fff;
}

.dark-theme .contact-placeholder {
  color: #999;
}

.dark-theme .contact-arrow {
  color: #999;
}

.dark-theme .contact-divider {
  background: #333;
}

.dark-theme .toolbar-icon {
  color: #fff;
}

.dark-theme .toolbar-btn:active {
  opacity: 0.6;
}

.dark-theme .modal-content {
  background: #2C2C2C;
}

.dark-theme .modal-header {
  border-color: #333;
}

.dark-theme .modal-title {
  color: #fff;
}

.dark-theme .category-option {
  border-color: #333;
  color: #fff;
}

.dark-theme .font-icon,
.dark-theme .more-label {
  color: #fff;
}

/* 上传进度提示 */
.upload-progress-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.upload-progress-container {
  background: #fff;
  border-radius: 16px;
  padding: 32px 40px;
  min-width: 280px;
  max-width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16px;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
}

.upload-progress-icon {
  font-size: 48px;
  line-height: 1;
}

.upload-progress-text {
  font-size: 16px;
  color: #333;
  font-weight: 500;
  text-align: center;
}

.upload-progress-bar {
  width: 100%;
  height: 8px;
  background: #f0f0f0;
  border-radius: 4px;
  overflow: hidden;
  position: relative;
}

.upload-progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #07c160 0%, #06ad56 100%);
  border-radius: 4px;
  transition: width 0.3s ease;
  position: relative;
  overflow: hidden;
}

.upload-progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.3),
    transparent
  );
  animation: shimmer 1.5s infinite;
}

@keyframes shimmer {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

.upload-progress-percent {
  font-size: 14px;
  color: #666;
  font-weight: 500;
}

.dark-theme .upload-progress-container {
  background: #2C2C2C;
}

.dark-theme .upload-progress-text {
  color: #fff;
}

.dark-theme .upload-progress-bar {
  background: #1F1F1F;
}

.dark-theme .upload-progress-percent {
  color: #ccc;
}
