@import "../common/index.wxss";

.page {
  min-height: 100vh;
  background: #f5f5f5;
}

.container {
  padding: 32rpx;
  padding-bottom: env(safe-area-inset-bottom);
}

.loading-container,
.error-container,
.empty-container {
  padding: 160rpx 0;
  text-align: center;
}

.loading-text,
.error-text,
.empty-text {
  font-size: 28rpx;
  color: #999999;
  display: block;
  margin-bottom: 24rpx;
}

.retry-btn {
  margin-top: 24rpx;
  color: #333333;
  border-color: #e0e0e0;
}

.articles-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.article-card {
  display: flex;
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s;
}

.article-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.article-image-wrapper {
  width: 240rpx;
  height: 180rpx;
  flex-shrink: 0;
  background: #f5f5f5;
  overflow: hidden;
  border-radius: 20rpx 0 0 20rpx;
}

.article-image {
  width: 100%;
  height: 100%;
}

.article-content {
  flex: 1;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.article-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1.5;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.article-description {
  font-size: 26rpx;
  color: #999999;
  line-height: 1.6;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.article-meta {
  display: flex;
  align-items: center;
  margin-top: auto;
  padding-top: 16rpx;
}

.meta-time {
  font-size: 22rpx;
  color: #cccccc;
  font-weight: 300;
}

.load-more-container {
  padding: 40rpx 0;
  text-align: center;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.load-more-btn {
  color: #333333;
  border-color: #e0e0e0;
}

.loading-more {
  padding: 20rpx 0;
}

.loading-more-text {
  font-size: 26rpx;
  color: #999999;
}

.no-more {
  padding: 20rpx 0;
}

.no-more-text {
  font-size: 24rpx;
  color: #cccccc;
}

/* 暗色主题 */
[data-weui-theme=dark] .page {
  background: #000000;
}

[data-weui-theme=dark] .article-card {
  background: #2c2c2e;
}

[data-weui-theme=dark] .article-title {
  color: #ffffff;
}

[data-weui-theme=dark] .article-description {
  color: #8e8e93;
}

[data-weui-theme=dark] .meta-time {
  color: #8e8e93;
}

[data-weui-theme=dark] .loading-text,
[data-weui-theme=dark] .error-text,
[data-weui-theme=dark] .empty-text {
  color: #8e8e93;
}

[data-weui-theme=dark] .retry-btn,
[data-weui-theme=dark] .load-more-btn {
  color: #ffffff;
  border-color: #38383a;
}

[data-weui-theme=dark] .loading-more-text {
  color: #8e8e93;
}

[data-weui-theme=dark] .no-more-text {
  color: #666666;
}

