    transform: translateY(0);
    box-shadow: 
      0 8px 24px rgba(7, 193, 96, 0.4),
      0 4px 12px rgba(7, 193, 96, 0.3),
      0 2px 4px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.25),
      inset 0 -1px 0 rgba(0, 0, 0, 0.2);
  }
  50% {
    transform: translateY(-4px);
    box-shadow: 
      0 12px 32px rgba(7, 193, 96, 0.5),
      0 6px 16px rgba(7, 193, 96, 0.4),
      0 2px 4px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.25),
      inset 0 -1px 0 rgba(0, 0, 0, 0.2);
  }
}

[data-weui-theme=dark] .floating-add-btn {
  animation: floatPulseDark 3s ease-in-out infinite;
}

