@import "../common/index.wxss";

.container {
  padding: 20px;
}

.exchange-section {
  background: var(--weui-BG-0);
  border-radius: 10px;
  padding: 30px 20px;
}

.exchange-title {
  font-size: 20px;
  font-weight: 600;
  color: var(--weui-FG-0);
  text-align: center;
  margin-bottom: 20px;
}

.exchange-rate-info {
  display: flex;
  flex-direction: column;
  padding: 15px;
  background: var(--weui-BG-2);
  border-radius: 8px;
  margin-bottom: 30px;
}

.rate-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 5px;
}

.rate-text {
  font-size: 14px;
  color: var(--weui-FG-1);
}

.rate-loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10px 0;
}

.rate-update {
  font-size: 12px;
  color: var(--weui-LINK);
  padding: 5px 10px;
  border-radius: 4px;
  background: var(--weui-BG-0);
}

.rate-time {
  font-size: 11px;
  color: var(--weui-FG-2);
  margin-top: 5px;
}

.input-section {
  margin-bottom: 30px;
}

.input-group {
  margin-bottom: 20px;
}

.currency-label {
  font-size: 14px;
  color: var(--weui-FG-1);
  margin-bottom: 10px;
}

.currency-input {
  width: 100%;
  height: 50px;
  padding: 0 15px;
  background: var(--weui-BG-2);
  border-radius: 8px;
  font-size: 18px;
  color: var(--weui-FG-0);
}

.currency-result {
  width: 100%;
  height: 50px;
  padding: 0 15px;
  background: var(--weui-BG-2);
  border-radius: 8px;
  font-size: 18px;
  color: var(--weui-FG-0);
  display: flex;
  align-items: center;
  font-weight: 600;
}

.arrow-icon {
  text-align: center;
  font-size: 24px;
  color: var(--weui-FG-2);
  margin: 10px 0;
}

.quick-amounts {
  margin-top: 30px;
}

.quick-title {
  font-size: 14px;
  color: var(--weui-FG-1);
  margin-bottom: 15px;
}

.quick-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.quick-btn {
  flex: 1;
  min-width: 60px;
  height: 40px;
  font-size: 14px;
  background: var(--weui-BG-2);
  color: var(--weui-FG-0);
  border: none;
  border-radius: 8px;
}

.quick-btn:active {
  background: var(--weui-BG-3);
}

