<view class="page" data-weui-theme="{{theme}}">
  <view class="container">
    <view class="activity-section">
      <view class="section-title">🔥 热门活动</view>

      <!-- 加载状态 -->
      <view wx:if="{{loading}}" class="loading-container">
        <text class="loading-text">加载中...</text>
      </view>

      <!-- 错误状态 -->
      <view wx:elif="{{error}}" class="error-container">
        <text class="error-text">获取数据失败，请稍后重试</text>
        <button class="retry-btn" bindtap="retry">重试</button>
      </view>

      <!-- 活动列表 -->
      <block wx:else>
        <view wx:if="{{activities.length === 0}}" class="empty-container">
          <text class="empty-text">暂无活动信息</text>
        </view>
        <view wx:else class="activities-list">
          <view 
            wx:for="{{activities}}" 
            wx:key="id"
            wx:for-item="activity"
            class="activity-card"
            bindtap="viewActivity"
            data-activity="{{activity}}"
          >
            <view class="activity-header">
              <view class="activity-icon">🎉</view>
              <view class="activity-title">{{activity.title}}</view>
            </view>
            <view wx:if="{{activity.description}}" class="activity-description">
              {{activity.description}}
            </view>
          </view>
        </view>
      </block>
    </view>
  </view>
</view>

