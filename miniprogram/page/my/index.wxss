@import "../common/index.wxss";

/* 页面容器 */
.page {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 键盘显示时，禁用页面滚动和点击穿透 */
.page.keyboard-showing {
  overflow: hidden;
  position: fixed;
  width: 100%;
  height: 100%;
}

.container {
  padding: 0;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 键盘显示时，禁用容器内的交互（防止点击穿透） */
.container.keyboard-showing {
  pointer-events: none;
  /* 确保容器内容不可点击 */
  touch-action: none;
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  user-select: none;
}

/* ========== 沉浸式头部区域 ========== */
.header-section {
  position: relative;
  padding: calc(env(safe-area-inset-top) + 80rpx) 40rpx 60rpx;
  background: linear-gradient(135deg, #f5e6d3 0%, #e8d5c4 50%, #d4c4b0 100%);
  /* 埃及主题暖沙色渐变 */
  min-height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 设置按钮（右上角） */
.settings-btn {
  position: absolute;
  top: calc(env(safe-area-inset-top) + 20rpx);
  right: 40rpx;
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.settings-icon {
  font-size: 40rpx;
  color: #333333;
  opacity: 0.8;
}

/* 设置菜单 */
.settings-menu {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  background: rgba(0, 0, 0, 0.3);
}

.settings-menu-content {
  position: absolute;
  top: calc(env(safe-area-inset-top) + 80rpx);
  right: 40rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  overflow: hidden;
  min-width: 200rpx;
}

.settings-menu-item {
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.settings-menu-item:last-child {
  border-bottom: none;
}

.settings-menu-item:active {
  background-color: #f5f5f5;
}

.settings-menu-divider {
  height: 1rpx;
  background: #f5f5f5;
  margin: 8rpx 0;
}

.settings-menu-icon {
  font-size: 36rpx;
  line-height: 1;
}

.settings-menu-text {
  font-size: 28rpx;
  color: #333333;
  flex: 1;
}

/* 用户信息卡片 */
.user-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto;
}

.user-section {
  padding: 0;
  background: transparent;
  position: relative;
}

.user-avatar-wrapper {
  margin-bottom: 32rpx;
  text-align: center;
}

.user-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.user-avatar-text {
  font-size: 48rpx;
  font-weight: 500;
  color: #333333;
}

.user-avatar-emoji {
  font-size: 64rpx;
  line-height: 1;
}

.user-info {
  text-align: center;
  margin-bottom: 32rpx;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 12rpx;
}

.user-phone {
  display: block;
  font-size: 26rpx;
  color: #999999;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  letter-spacing: 0.5rpx;
}

.welcome-section {
  text-align: center;
}

.welcome-icon {
  font-size: 64rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.welcome-text {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.welcome-desc {
  display: block;
  font-size: 24rpx;
  color: #999999;
}

/* ========== 登录区域 ========== */
.login-section {
  margin: 0;
  background: #ffffff;
}

.login-card {
  padding: 0 40rpx 60rpx;
}

/* 登录方式切换 - Segmented Control 风格 */
.login-mode-tabs {
  display: flex;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 4rpx;
  margin-bottom: 60rpx;
  position: relative;
}

.login-mode-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666666;
  border-radius: 6rpx;
  transition: all 0.2s;
  position: relative;
  z-index: 1;
}

.login-mode-tab.active {
  background: #ffffff;
  color: #333333;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* 表单样式 */
.login-form {
  display: flex;
  flex-direction: column;
  gap: 48rpx;
}

/* 登录提示信息 */
.login-tip {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #333333;
  margin-bottom: 8rpx;
}

.tip-icon {
  font-size: 32rpx;
  line-height: 1.2;
  flex-shrink: 0;
}

.tip-text {
  flex: 1;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

/* 暗色主题 - 登录提示 */
[data-weui-theme=dark] .login-tip {
  background: #2c2c2e;
  border-left-color: #ffffff;
}

[data-weui-theme=dark] .tip-text {
  color: #8e8e93;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.form-label {
  font-size: 26rpx;
  font-weight: 500;
  color: #333333;
}

.form-label-optional {
  font-size: 24rpx;
  font-weight: normal;
  color: #999999;
  margin-left: 4rpx;
}

/* 反馈类型选择器 */
.feedback-type-selector {
  display: flex;
  gap: 20rpx;
  margin-top: 8rpx;
}

.type-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx 16rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  background: #ffffff;
  transition: all 0.2s;
}

.type-option.active {
  border-color: #333333;
  background: #f8f8f8;
}

.type-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
  line-height: 1;
}

.type-text {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
}

.type-option.active .type-text {
  color: #333333;
  font-weight: 600;
}

/* 底边线型输入框 */
.input-wrapper {
  position: relative;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  align-items: center;
  transition: border-color 0.2s;
}

.input-wrapper:focus-within {
  border-bottom-color: #333333;
}

.input-wrapper-with-btn {
  padding-right: 0;
  gap: 20rpx;
}

.form-input {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
  line-height: 1.5;
  padding: 0;
  background: transparent;
  border: none;
}

.input-placeholder {
  color: #999999;
}

/* PIN码输入框容器 */
.pin-input-wrapper {
  position: relative;
  margin-top: 16rpx;
  min-height: 88rpx;
}

/* PIN 表单组 - 键盘显示时隐藏 */
.pin-form-group {
  transition: opacity 0.2s;
}

.page.keyboard-showing .pin-form-group {
  opacity: 0;
  pointer-events: none;
}

/* 固定定位的 PIN 输入框（键盘显示时） */
.pin-input-fixed {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 9998;
  background: #ffffff;
  padding: 40rpx;
  padding-top: calc(env(safe-area-inset-top) + 40rpx);
  border-bottom: 1rpx solid #e0e0e0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.pin-fixed-label {
  font-size: 26rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 16rpx;
}

/* 暗色主题 - 固定 PIN 输入框 */
[data-weui-theme=dark] .pin-input-fixed {
  background: #1c1c1e;
  border-bottom-color: #38383a;
}

[data-weui-theme=dark] .pin-fixed-label {
  color: #ffffff;
}

/* 隐藏实际输入框，但保持可点击和聚焦 */
.pin-input {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: 1;
  font-size: 0;
  color: transparent;
  background: transparent;
  border: none;
  caret-color: transparent; /* 隐藏光标 */
}

/* 4个PIN码框容器 */
.pin-boxes {
  display: flex;
  gap: 20rpx;
  justify-content: center;
  align-items: center;
  padding: 0;
  position: relative;
  z-index: 2; /* 确保在输入框之上，可以接收点击事件 */
  pointer-events: auto; /* 确保可以点击 */
}

/* 单个PIN码框 */
.pin-box {
  width: 88rpx;
  height: 88rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  transition: all 0.2s;
  font-size: 32rpx;
  color: #333333;
  position: relative;
}

/* PIN码框聚焦状态 - 高亮当前要输入的框 */
.pin-box.focus {
  border-color: #333333;
  background: #f9f9f9;
  box-shadow: 0 0 0 2rpx rgba(51, 51, 51, 0.1);
  animation: pinBoxPulse 1s ease-in-out infinite;
}

@keyframes pinBoxPulse {
  0%, 100% {
    box-shadow: 0 0 0 2rpx rgba(51, 51, 51, 0.1);
  }
  50% {
    box-shadow: 0 0 0 4rpx rgba(51, 51, 51, 0.15);
  }
}

/* PIN码框已填充状态 */
.pin-box.filled {
  border-color: #333333;
  background: #f5f5f5;
}

.pin-box.filled text {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}

.code-btn {
  flex-shrink: 0;
  padding: 8rpx 20rpx;
  font-size: 26rpx;
  color: #333333;
  border-color: #e0e0e0;
  border-radius: 6rpx;
  background: transparent;
  height: auto;
  line-height: 1.5;
}

.code-btn::after {
  border: 1rpx solid #e0e0e0;
}

.code-btn.disabled {
  color: #999999;
  border-color: #e0e0e0;
}

/* 登录按钮 - 全宽圆角矩形 */
.login-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 8rpx;
  margin-top: 20rpx;
  background: #333333;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.login-btn::after {
  border: none;
}

.login-btn[disabled] {
  background: #e0e0e0;
  color: #999999;
  box-shadow: none;
}

.login-btn.loading {
  opacity: 0.8;
}

/* ========== 数据统计区域 ========== */
.stats-section {
  margin: -40rpx 40rpx 32rpx;
  position: relative;
  z-index: 5;
}

.stats-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 40rpx;
}

.stat-number {
  font-size: 56rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1.2;
  margin-bottom: 12rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

.stat-label {
  font-size: 26rpx;
  color: #666666;
  font-weight: 400;
}

.stat-divider {
  width: 1rpx;
  height: 80rpx;
  background: #e8e8e8;
  opacity: 0.5;
}

/* ========== 功能菜单区域 ========== */
.menu-section {
  margin: 0 40rpx 32rpx;
}

.menu-card {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.2s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f8f8f8;
}

.menu-item-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
}

.menu-icon {
  font-size: 40rpx;
  line-height: 1;
}

.menu-text {
  font-size: 30rpx;
  color: #333333;
  font-weight: 400;
}

.menu-arrow {
  font-size: 36rpx;
  color: #cccccc;
  font-weight: 300;
}

/* 文章列表区域 */
.articles-section {
  margin: 0 40rpx 32rpx;
}

.loading-container,
.error-container,
.empty-container {
  padding: 80rpx 0;
  text-align: center;
}

.loading-text,
.error-text,
.empty-text {
  font-size: 28rpx;
  color: #999999;
  display: block;
  margin-bottom: 24rpx;
}

.retry-btn {
  margin-top: 24rpx;
  color: #333333;
  border-color: #e0e0e0;
}

.articles-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.article-card {
  display: flex;
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s;
  margin-bottom: 32rpx;
}

.article-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.article-image-wrapper {
  width: 240rpx;
  height: 180rpx;
  flex-shrink: 0;
  background: #f5f5f5;
  overflow: hidden;
  border-radius: 24rpx 0 0 24rpx;
}

.article-image {
  width: 100%;
  height: 100%;
}

.article-content {
  flex: 1;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.article-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1.5;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.article-description {
  font-size: 26rpx;
  color: #999999;
  line-height: 1.6;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.article-meta {
  display: flex;
  align-items: center;
  margin-top: auto;
  padding-top: 16rpx;
}

.meta-time {
  font-size: 22rpx;
  color: #cccccc;
  font-weight: 300;
}

.load-more-container {
  padding: 40rpx 0;
  text-align: center;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.load-more-btn {
  color: #333333;
  border-color: #e0e0e0;
}

.loading-more {
  padding: 20rpx 0;
}

.loading-more-text {
  font-size: 26rpx;
  color: #999999;
}

.no-more {
  padding: 20rpx 0;
}

.no-more-text {
  font-size: 24rpx;
  color: #cccccc;
}

/* ========== 反馈建议区域 ========== */
.feedback-section {
  margin: 0 40rpx 32rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  margin-bottom: 32rpx;
  padding-top: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.feedback-card {
  background: transparent;
}

.feedback-form {
  display: flex;
  flex-direction: column;
  gap: 48rpx;
}

.picker-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #e0e0e0;
  min-height: 64rpx;
}

.picker-text {
  font-size: 30rpx;
  color: #333333;
  flex: 1;
}

.picker-text.placeholder {
  color: #999999;
}

.picker-arrow {
  font-size: 28rpx;
  color: #999999;
  margin-left: 20rpx;
}

.textarea-wrapper {
  position: relative;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
  min-height: 200rpx;
}

.feedback-textarea {
  width: 100%;
  min-height: 160rpx;
  font-size: 30rpx;
  color: #333333;
  line-height: 1.6;
  background: transparent;
  border: none;
  padding: 0;
}

.textarea-placeholder {
  color: #999999;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999999;
  margin-top: 16rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 8rpx;
  margin-top: 20rpx;
  background: #333333;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.submit-btn::after {
  border: none;
}

.submit-btn[disabled] {
  background: #e0e0e0;
  color: #999999;
  box-shadow: none;
}

.submit-btn.loading {
  opacity: 0.8;
}

/* ========== 调试工具 ========== */
.debug-section {
  margin: 40rpx 30rpx;
  text-align: center;
}

.debug-btn {
  font-size: 24rpx;
  color: #999999;
  border-color: #e0e0e0;
}

/* ========== 暗色主题 ========== */
[data-weui-theme=dark] .page {
  background: #000000;
}

[data-weui-theme=dark] .header-section {
  background: linear-gradient(135deg, #2c2c2e 0%, #1c1c1e 50%, #0f0f0f 100%);
}

[data-weui-theme=dark] .user-card,
[data-weui-theme=dark] .stats-card,
[data-weui-theme=dark] .menu-card,
[data-weui-theme=dark] .login-section,
[data-weui-theme=dark] .feedback-section {
  background: #1c1c1e;
}

[data-weui-theme=dark] .settings-menu-content {
  background: #2c2c2e;
}

[data-weui-theme=dark] .settings-menu-text {
  color: #ffffff;
}

[data-weui-theme=dark] .settings-menu-item {
  border-bottom-color: #38383a;
}

[data-weui-theme=dark] .settings-menu-item:active {
  background-color: #38383a;
}

[data-weui-theme=dark] .settings-menu-divider {
  background: #38383a;
}

[data-weui-theme=dark] .settings-icon {
  color: #ffffff;
  opacity: 0.8;
}

[data-weui-theme=dark] .user-avatar {
  background: #2c2c2e;
}

[data-weui-theme=dark] .user-avatar-text,
[data-weui-theme=dark] .user-name,
[data-weui-theme=dark] .welcome-text,
[data-weui-theme=dark] .form-label,
[data-weui-theme=dark] .form-input,
[data-weui-theme=dark] .picker-text,
[data-weui-theme=dark] .feedback-textarea,
[data-weui-theme=dark] .section-title {
  color: #ffffff;
}

[data-weui-theme=dark] .user-phone,
[data-weui-theme=dark] .welcome-desc,
[data-weui-theme=dark] .form-label-optional,
[data-weui-theme=dark] .input-placeholder,
[data-weui-theme=dark] .textarea-placeholder,
[data-weui-theme=dark] .char-count,
[data-weui-theme=dark] .picker-arrow,
[data-weui-theme=dark] .type-text {
  color: #8e8e93;
}

