/* ========== PIN输入弹窗 ========== */
.pin-input-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 10000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.pin-input-modal-content {
  background: #ffffff;
  border-radius: 24rpx;
  width: 100%;
  max-width: 600rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.pin-input-modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.pin-input-modal-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.pin-input-modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #999999;
  border-radius: 50%;
  transition: background-color 0.2s;
}

.pin-input-modal-close:active {
  background-color: #f5f5f5;
}

.pin-input-modal-body {
  padding: 40rpx;
}

.pin-input-form {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.pin-input-form .form-label {
  font-size: 24rpx;
}

.pin-input-wrapper-modal {
  position: relative;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #e0e0e0;
  transition: border-color 0.2s;
}

.pin-input-wrapper-modal:focus-within {
  border-bottom-color: #333333;
}

.pin-input-field {
  width: 100%;
  font-size: 36rpx;
  color: #333333;
  text-align: center;
  letter-spacing: 12rpx;
  padding: 0;
  background: transparent;
  border: none;
  font-weight: 500;
}

.pin-input-placeholder {
  color: #cccccc;
}

.pin-input-hint {
  text-align: center;
  margin-top: 8rpx;
}

.pin-input-hint text {
  font-size: 22rpx;
  color: #999999;
}

.pin-input-modal-footer {
  display: flex;
  gap: 24rpx;
  padding: 32rpx 40rpx;
  border-top: 1rpx solid #f5f5f5;
}

.pin-input-btn-cancel,
.pin-input-btn-confirm {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border-radius: 12rpx;
  border: none;
  padding: 0;
}

.pin-input-btn-cancel {
  background: #f5f5f5;
  color: #666666;
}

.pin-input-btn-cancel::after {
  border: none;
}

.pin-input-btn-confirm {
  background: #e0e0e0;
  color: #999999;
}

.pin-input-btn-confirm::after {
  border: none;
}

.pin-input-btn-confirm.active {
  background: #333333;
  color: #ffffff;
}

.pin-input-btn-confirm[disabled] {
  background: #e0e0e0;
  color: #999999;
}

