@import "../common/index.wxss";

.container {
  padding: 20px;
}

.user-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px 20px;
  background: var(--weui-BG-0);
  border-radius: 10px;
  margin-bottom: 20px;
}

.userinfo-avatar {
  border-radius: 50%;
  width: 100px;
  height: 100px;
  margin-bottom: 15px;
}

.userinfo-nickname {
  font-size: 18px;
  font-weight: 500;
  color: var(--weui-FG-0);
}

.user-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100px;
  height: 100px;
  border-radius: 50%;
  background: var(--weui-BG-2);
  margin-bottom: 15px;
}

.user-placeholder-text {
  font-size: 14px;
  color: var(--weui-FG-2);
}

.btn-section {
  padding: 20px 0;
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.page-body-button {
  width: 100%;
}

.status-text {
  text-align: center;
  color: var(--weui-FG-1);
  font-size: 14px;
  padding: 10px 0;
}

.menu-section {
  margin-top: 20px;
}

/* 反馈建议区域 */
.feedback-section {
  margin-top: 20px;
}

.feedback-title {
  font-size: 18px;
  font-weight: 600;
  color: var(--weui-FG-0);
  margin-bottom: 16px;
}

.feedback-card {
  background: var(--weui-BG-0);
  border-radius: 10px;
  padding: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.feedback-form {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.form-label {
  font-size: 14px;
  color: var(--weui-FG-1);
  font-weight: 500;
}

.picker-view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 16px;
  background: var(--weui-BG-2);
  border-radius: 8px;
  font-size: 16px;
  color: var(--weui-FG-0);
  min-height: 24px;
}

.picker-arrow {
  font-size: 12px;
  color: var(--weui-FG-2);
}

.feedback-textarea {
  width: 100%;
  min-height: 120px;
  padding: 12px 16px;
  background: var(--weui-BG-2);
  border-radius: 8px;
  font-size: 16px;
  color: var(--weui-FG-0);
  line-height: 1.5;
  box-sizing: border-box;
}

.char-count {
  text-align: right;
  font-size: 12px;
  color: var(--weui-FG-2);
  margin-top: 4px;
}

.submit-btn {
  width: 100%;
  margin-top: 10px;
  background: #07c160;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 500;
}

.submit-btn[disabled] {
  background: var(--weui-BG-2);
  color: var(--weui-FG-2);
}

[data-weui-theme=dark] .feedback-card {
  background: #2C2C2C;
}

[data-weui-theme=dark] .picker-view {
  background: #1F1F1F;
}

[data-weui-theme=dark] .feedback-textarea {
  background: #1F1F1F;
  color: #fff;
}

