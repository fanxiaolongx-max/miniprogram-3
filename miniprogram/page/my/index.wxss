@import "../common/index.wxss";

/* 页面容器 */
.page {
  min-height: 100vh;
  background: #f5f5f5;
}

.container {
  padding: 0;
  padding-bottom: env(safe-area-inset-bottom);
}

/* ========== 用户信息区域 ========== */
.user-section {
  padding: 80rpx 40rpx 60rpx;
  background: #ffffff;
  position: relative;
}

.user-avatar-wrapper {
  margin-bottom: 32rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
}

.user-avatar-text {
  font-size: 48rpx;
  font-weight: 500;
  color: #333333;
}

.user-avatar-emoji {
  font-size: 64rpx;
  line-height: 1;
}

.user-info {
  text-align: center;
  margin-bottom: 32rpx;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 12rpx;
}

.user-phone {
  display: block;
  font-size: 26rpx;
  color: #999999;
}

.logout-btn {
  margin-top: 20rpx;
  color: #666666;
  border-color: #e0e0e0;
  font-size: 26rpx;
}

.welcome-section {
  text-align: center;
}

.welcome-icon {
  font-size: 64rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.welcome-text {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.welcome-desc {
  display: block;
  font-size: 24rpx;
  color: #999999;
}

/* ========== 登录区域 ========== */
.login-section {
  margin: 0;
  background: #ffffff;
}

.login-card {
  padding: 0 40rpx 60rpx;
}

/* 登录方式切换 - Segmented Control 风格 */
.login-mode-tabs {
  display: flex;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 4rpx;
  margin-bottom: 60rpx;
  position: relative;
}

.login-mode-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666666;
  border-radius: 6rpx;
  transition: all 0.2s;
  position: relative;
  z-index: 1;
}

.login-mode-tab.active {
  background: #ffffff;
  color: #333333;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* 表单样式 */
.login-form {
  display: flex;
  flex-direction: column;
  gap: 48rpx;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.form-label {
  font-size: 26rpx;
  font-weight: 500;
  color: #333333;
}

.form-label-optional {
  font-size: 24rpx;
  font-weight: normal;
  color: #999999;
  margin-left: 4rpx;
}

/* 底边线型输入框 */
.input-wrapper {
  position: relative;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  align-items: center;
  transition: border-color 0.2s;
}

.input-wrapper:focus-within {
  border-bottom-color: #333333;
}

.input-wrapper-with-btn {
  padding-right: 0;
  gap: 20rpx;
}

.form-input {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
  line-height: 1.5;
  padding: 0;
  background: transparent;
  border: none;
}

.input-placeholder {
  color: #999999;
}

/* PIN码输入框容器 */
.pin-input-wrapper {
  position: relative;
  margin-top: 16rpx;
  min-height: 88rpx;
}

/* 隐藏实际输入框，但保持可点击和聚焦 */
.pin-input {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: 1;
  font-size: 0;
  color: transparent;
  background: transparent;
  border: none;
  caret-color: transparent; /* 隐藏光标 */
}

/* 4个PIN码框容器 */
.pin-boxes {
  display: flex;
  gap: 20rpx;
  justify-content: center;
  align-items: center;
  padding: 0;
  position: relative;
  z-index: 2; /* 确保在输入框之上，可以接收点击事件 */
  pointer-events: auto; /* 确保可以点击 */
}

/* 单个PIN码框 */
.pin-box {
  width: 88rpx;
  height: 88rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  transition: all 0.2s;
  font-size: 32rpx;
  color: #333333;
  position: relative;
}

/* PIN码框聚焦状态 - 高亮当前要输入的框 */
.pin-box.focus {
  border-color: #333333;
  background: #f9f9f9;
  box-shadow: 0 0 0 2rpx rgba(51, 51, 51, 0.1);
  animation: pinBoxPulse 1s ease-in-out infinite;
}

@keyframes pinBoxPulse {
  0%, 100% {
    box-shadow: 0 0 0 2rpx rgba(51, 51, 51, 0.1);
  }
  50% {
    box-shadow: 0 0 0 4rpx rgba(51, 51, 51, 0.15);
  }
}

/* PIN码框已填充状态 */
.pin-box.filled {
  border-color: #333333;
  background: #f5f5f5;
}

.pin-box.filled text {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}

.code-btn {
  flex-shrink: 0;
  padding: 8rpx 20rpx;
  font-size: 26rpx;
  color: #333333;
  border-color: #e0e0e0;
  border-radius: 6rpx;
  background: transparent;
  height: auto;
  line-height: 1.5;
}

.code-btn::after {
  border: 1rpx solid #e0e0e0;
}

.code-btn.disabled {
  color: #999999;
  border-color: #e0e0e0;
}

/* 登录按钮 - 全宽圆角矩形 */
.login-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 8rpx;
  margin-top: 20rpx;
  background: #333333;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.login-btn::after {
  border: none;
}

.login-btn[disabled] {
  background: #e0e0e0;
  color: #999999;
  box-shadow: none;
}

.login-btn.loading {
  opacity: 0.8;
}

/* ========== 反馈建议区域 ========== */
.feedback-section {
  margin-top: 24rpx;
  padding: 0 40rpx 40rpx;
  background: #ffffff;
}

.section-header {
  margin-bottom: 32rpx;
  padding-top: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.feedback-card {
  background: transparent;
}

.feedback-form {
  display: flex;
  flex-direction: column;
  gap: 48rpx;
}

.picker-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #e0e0e0;
  min-height: 64rpx;
}

.picker-text {
  font-size: 30rpx;
  color: #333333;
  flex: 1;
}

.picker-text.placeholder {
  color: #999999;
}

.picker-arrow {
  font-size: 28rpx;
  color: #999999;
  margin-left: 20rpx;
}

.textarea-wrapper {
  position: relative;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
  min-height: 200rpx;
}

.feedback-textarea {
  width: 100%;
  min-height: 160rpx;
  font-size: 30rpx;
  color: #333333;
  line-height: 1.6;
  background: transparent;
  border: none;
  padding: 0;
}

.textarea-placeholder {
  color: #999999;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999999;
  margin-top: 16rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 8rpx;
  margin-top: 20rpx;
  background: #333333;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.submit-btn::after {
  border: none;
}

.submit-btn[disabled] {
  background: #e0e0e0;
  color: #999999;
  box-shadow: none;
}

.submit-btn.loading {
  opacity: 0.8;
}

/* ========== 调试工具 ========== */
.debug-section {
  margin: 40rpx 30rpx;
  text-align: center;
}

.debug-btn {
  font-size: 24rpx;
  color: #999999;
  border-color: #e0e0e0;
}

/* ========== 暗色主题 ========== */
[data-weui-theme=dark] .page {
  background: #000000;
}

[data-weui-theme=dark] .user-section,
[data-weui-theme=dark] .login-section,
[data-weui-theme=dark] .feedback-section {
  background: #1c1c1e;
}

[data-weui-theme=dark] .user-avatar {
  background: #2c2c2e;
}

[data-weui-theme=dark] .user-avatar-text,
[data-weui-theme=dark] .user-name,
[data-weui-theme=dark] .welcome-text,
[data-weui-theme=dark] .form-label,
[data-weui-theme=dark] .form-input,
[data-weui-theme=dark] .picker-text,
[data-weui-theme=dark] .feedback-textarea,
[data-weui-theme=dark] .section-title {
  color: #ffffff;
}

[data-weui-theme=dark] .user-phone,
[data-weui-theme=dark] .welcome-desc,
[data-weui-theme=dark] .form-label-optional,
[data-weui-theme=dark] .input-placeholder,
[data-weui-theme=dark] .textarea-placeholder,
[data-weui-theme=dark] .char-count,
[data-weui-theme=dark] .picker-arrow {
  color: #8e8e93;
}

[data-weui-theme=dark] .login-mode-tabs {
  background: #2c2c2e;
}

[data-weui-theme=dark] .login-mode-tab {
  color: #8e8e93;
}

[data-weui-theme=dark] .login-mode-tab.active {
  background: #1c1c1e;
  color: #ffffff;
}

[data-weui-theme=dark] .input-wrapper,
[data-weui-theme=dark] .picker-wrapper,
[data-weui-theme=dark] .textarea-wrapper {
  border-bottom-color: #38383a;
}

[data-weui-theme=dark] .input-wrapper:focus-within {
  border-bottom-color: #ffffff;
}

[data-weui-theme=dark] .code-btn {
  color: #ffffff;
  border-color: #38383a;
}

[data-weui-theme=dark] .code-btn::after {
  border-color: #38383a;
}

[data-weui-theme=dark] .login-btn,
[data-weui-theme=dark] .submit-btn {
  background: #ffffff;
  color: #000000;
}

[data-weui-theme=dark] .login-btn[disabled],
[data-weui-theme=dark] .submit-btn[disabled] {
  background: #2c2c2e;
  color: #8e8e93;
}

[data-weui-theme=dark] .logout-btn {
  color: #8e8e93;
  border-color: #38383a;
}

/* 暗色主题 - PIN码输入框 */
[data-weui-theme=dark] .pin-box {
  background: #1F1F1F;
  border-color: #38383a;
}

[data-weui-theme=dark] .pin-input-wrapper:focus-within .pin-box,
[data-weui-theme=dark] .pin-box.filled {
  border-color: #ffffff;
  background: #2C2C2C;
}

[data-weui-theme=dark] .pin-box.filled text {
  color: #ffffff;
}

/* 暗色主题 - PIN码框聚焦状态 */
[data-weui-theme=dark] .pin-box.focus {
  border-color: #ffffff;
  background: #2C2C2C;
  box-shadow: 0 0 0 2rpx rgba(255, 255, 255, 0.2);
  animation: pinBoxPulseDark 1s ease-in-out infinite;
}

@keyframes pinBoxPulseDark {
  0%, 100% {
    box-shadow: 0 0 0 2rpx rgba(255, 255, 255, 0.2);
  }
  50% {
    box-shadow: 0 0 0 4rpx rgba(255, 255, 255, 0.3);
  }
}
