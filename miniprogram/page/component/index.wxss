@import "../common/index.wxss";

.weui-agree__link {
  display: inline;
  color: var(--weui-LINK);
}

/* 顶部 Banner */
.banner-section {
  padding: 16px 20px;
  margin-bottom: 16px;
}

.banner-card {
  background: linear-gradient(135deg, #C69C6D 0%, #8B6F47 100%);
  border-radius: 12px;
  padding: 16px;
  display: flex;
  align-items: center;
  box-shadow: 0 4px 12px rgba(198, 156, 109, 0.3);
  position: relative;
  overflow: hidden;
}

.banner-card::before {
  content: '';
  position: absolute;
  top: -30%;
  right: -10%;
  width: 150%;
  height: 150%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  pointer-events: none;
}

.banner-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8px;
  transition: background-color 0.2s;
  border-radius: 8px;
  position: relative;
  z-index: 1;
}

.banner-item:active {
  background-color: rgba(255, 255, 255, 0.1);
}

.banner-icon {
  font-size: 24px;
  margin-right: 8px;
  filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.2));
}

.banner-content {
  display: flex;
  flex-direction: column;
}

.banner-label {
  font-size: 11px;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 2px;
}

.banner-value {
  font-size: 14px;
  font-weight: 600;
  color: #FFFFFF;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
}

.banner-divider {
  width: 1px;
  height: 40px;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 8px;
  position: relative;
  z-index: 1;
}

/* 宫格布局 */
.grid-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12px;
  padding: 0 20px;
  margin-bottom: 16px;
}

.grid-item {
  background: #FFFFFF;
  border-radius: 12px;
  padding: 20px 12px;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  transition: transform 0.2s, box-shadow 0.2s;
  position: relative;
}

.grid-item:active {
  transform: scale(0.96);
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
}

.grid-badge {
  position: absolute;
  top: 8px;
  right: 8px;
  font-size: 12px;
  color: #C69C6D;
  font-weight: 600;
}

.grid-icon-wrapper {
  width: 56px;
  height: 56px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12px;
}

.grid-icon-blue {
  background: rgba(0, 122, 255, 0.1);
}

.grid-icon-green {
  background: rgba(52, 199, 89, 0.1);
}

.grid-icon-orange {
  background: rgba(255, 149, 0, 0.1);
}

.grid-icon-purple {
  background: rgba(175, 82, 222, 0.1);
}

.grid-icon-pink {
  background: rgba(255, 45, 85, 0.1);
}

.grid-icon-teal {
  background: rgba(90, 200, 250, 0.1);
}

.grid-icon {
  font-size: 28px;
  line-height: 1;
}

.grid-title {
  font-size: 14px;
  font-weight: 600;
  color: #333333;
  margin-bottom: 4px;
  text-align: center;
}

.grid-desc {
  font-size: 11px;
  color: #999999;
  text-align: center;
  line-height: 1.3;
}

/* iOS 设置风格样式 */
