}

.ios-icon-wrapper {
  width: 32px;
  height: 32px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
  flex-shrink: 0;
}

.ios-icon-blue {
  background: rgba(0, 122, 255, 0.1);
}

.ios-icon-green {
  background: rgba(52, 199, 89, 0.1);
}

.ios-icon-orange {
  background: rgba(255, 149, 0, 0.1);
}

.ios-icon-purple {
  background: rgba(175, 82, 222, 0.1);
}

.ios-icon-red {
  background: rgba(255, 59, 48, 0.1);
}

.ios-icon-warning {
  background: rgba(255, 149, 0, 0.15);
}

.ios-icon {
  font-size: 18px;
  line-height: 1;
}

.ios-item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.ios-item-title {
  font-size: 16px;
  font-weight: 600;
  color: #333333;
  line-height: 1.5;
}

.ios-arrow {
  font-size: 16px;
  color: #CCCCCC;
  font-weight: 300;
  margin-left: 12px;
  flex-shrink: 0;
}

.ios-divider {
  height: 1px;
  background: #E5E5E5;
  margin: 0 20px;
}

.ios-item-content-expand {
  max-height: 0;
  overflow: hidden;
  opacity: 0;
  transition: max-height 0.3s ease-out, opacity 0.2s ease-out;
}

.ios-item-content-expand-show {
  max-height: 2000px;
  opacity: 1;
  transition: max-height 0.5s ease-in, opacity 0.3s ease-in;
  padding-bottom: 8px;
}

.ios-sub-item {
  display: flex;
  align-items: center;
  padding: 12px 20px 12px 64px;
  min-height: 48px;
  transition: background-color 0.2s;
  border-bottom: 1px solid #F5F7FA;
}

.ios-sub-item:last-child {
  border-bottom: none;
}

.ios-sub-item:active {
  background-color: #F5F7FA;
}

.ios-sub-item-image {
  width: 40px;
  height: 40px;
  border-radius: 8px;
  margin-right: 12px;
  flex-shrink: 0;
}

.ios-sub-item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.ios-sub-item-text,
.ios-sub-item-title {
  font-size: 15px;
  font-weight: 500;
  color: #333333;
  line-height: 1.5;
  margin-bottom: 2px;
}

.ios-sub-item-desc {
  font-size: 13px;
  color: #999999;
  line-height: 1.4;
}

.ios-arrow-sub {
  font-size: 14px;
  color: #CCCCCC;
  font-weight: 300;
  margin-left: 12px;
  flex-shrink: 0;
