.rich-text-editor {
  width: 100%;
  background: #fff;
  border-radius: 8px;
  overflow: hidden;
}

/* 工具栏 */
.editor-toolbar {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  padding: 12px;
  background: #f5f5f5;
  border-bottom: 1px solid #e0e0e0;
}

.toolbar-group {
  display: flex;
  gap: 4px;
  padding-right: 8px;
  border-right: 1px solid #e0e0e0;
}

.toolbar-group:last-child {
  border-right: none;
}

.toolbar-btn {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 4px;
  font-size: 14px;
  color: #333;
  transition: all 0.2s;
}

.toolbar-btn:active {
  background: #e0e0e0;
  transform: scale(0.95);
}

.toolbar-btn .icon {
  font-size: 14px;
  font-weight: 600;
}

/* 编辑器容器 */
.editor-container {
  min-height: 300px;
  background: #fff;
}

.editor {
  min-height: 300px;
  padding: 12px;
  font-size: 14px;
  line-height: 1.6;
  color: #333;
}

/* 提示信息 */
.editor-tips {
  padding: 8px 12px;
  background: #f9f9f9;
  border-top: 1px solid #e0e0e0;
}

.tips-text {
  font-size: 12px;
  color: #999;
  line-height: 1.5;
}

[data-weui-theme=dark] .rich-text-editor {
  background: #2C2C2C;
}

[data-weui-theme=dark] .editor-toolbar {
  background: #1F1F1F;
  border-bottom-color: #333;
}

[data-weui-theme=dark] .toolbar-group {
  border-right-color: #333;
}

[data-weui-theme=dark] .toolbar-btn {
  background: #2C2C2C;
  color: #fff;
}

[data-weui-theme=dark] .toolbar-btn:active {
  background: #333;
}

[data-weui-theme=dark] .editor-container {
  background: #2C2C2C;
}

[data-weui-theme=dark] .editor {
  color: #fff;
}

[data-weui-theme=dark] .editor-tips {
  background: #1F1F1F;
  border-top-color: #333;
}

[data-weui-theme=dark] .tips-text {
  color: #666;
}

